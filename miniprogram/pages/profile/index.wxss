/* 个人中心页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 50rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #1890FF, #40A9FF);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-phone {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.member-level {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: inline-block;
}

.edit-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录状态 */
.login-prompt {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.login-icon {
  font-size: 160rpx;
  margin-bottom: 30rpx;
  display: block;
  color: #1890FF;
}

.login-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 300rpx;
  height: 80rpx;
  background: #1890FF;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能菜单 */
.menu-section {
  margin: 0 20rpx;
}

.menu-group {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.group-title {
  display: block;
  padding: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  background: #F8F9FA;
  border-bottom: 1rpx solid #E5E5E5;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  background: white;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F8F9FA;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  width: 50rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #CCC;
  font-weight: bold;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 20rpx 0;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #FF4D4F;
  border: 2rpx solid #FF4D4F;
  border-radius: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background: #FFF2F0;
}