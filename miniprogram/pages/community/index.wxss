/* 社区互动页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #E5E5E5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #1890FF;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890FF;
  border-radius: 2rpx;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  width: 100rpx;
  height: 100rpx;
  background: #1890FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
  z-index: 99;
}

.plus-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 内容区域 */
.content-area {
  padding: 20rpx;
}

/* 帖子样式 */
.post-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #F0F8FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #1890FF;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 22rpx;
  color: #999;
}

.post-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.post-images {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  background: #F0F8FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #1890FF;
}

.post-actions {
  display: flex;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F5F5F5;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
}

/* 健康知识样式 */
.knowledge-item {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.knowledge-cover {
  width: 200rpx;
  height: 150rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  background: #F0F8FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #1890FF;
  flex-shrink: 0;
}

.knowledge-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.knowledge-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.knowledge-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.knowledge-meta {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  font-size: 22rpx;
  color: #999;
}

/* 问答样式 */
.qa-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.q-tag {
  background: #1890FF;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.q-content {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.answer {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 3rpx solid #F0F8FF;
}

.a-tag {
  background: #52C41A;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.a-content {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.doctor-name {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.qa-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F5F5F5;
}

.qa-time {
  font-size: 22rpx;
  color: #999;
}

.qa-status {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.qa-status.answered {
  background: #F6FFED;
  color: #52C41A;
}

.qa-status.pending {
  background: #FFF7E6;
  color: #FAAD14;
}

/* 发布动态弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.publish-modal {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-content {
  flex: 1;
  padding: 30rpx 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.input-section {
  margin-bottom: 30rpx;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #FAFAFA;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.image-section {
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF4D4F;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #D9D9D9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.secondary {
  background: #F5F5F5;
  color: #666;
  border: none;
}

.modal-btn.primary {
  background: #1890FF;
  color: white;
  border: none;
}

/* 提问咨询弹框样式 */
.question-modal {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.tips-section {
  background: #F0F8FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #1890FF;
  margin-bottom: 16rpx;
}

.tips-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}