/* pages/health-records/index.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部导航 */
.header {
  background: white;
  padding-top: var(--status-bar-height, 44rpx);
  border-bottom: 1rpx solid #eee;
}

.nav-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.back-icon {
  font-size: 40rpx;
  margin-right: 8rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-right {
  width: 120rpx;
}

/* 筛选区域 */
.filter-section {
  background: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  min-width: 80rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #1890ff;
  color: white;
}

/* 记录列表区域 */
.records-section {
  flex: 1;
}

/* 状态显示 */
.loading-state,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.loading-text {
  font-size: 28rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 记录列表 */
.record-list {
  padding: 0 32rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-left {
  flex: 1;
}

.record-type {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.type-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  background: rgba(82, 196, 26, 0.1);
  border-radius: 12rpx;
}

.record-value {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.value-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.unit-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.record-time {
  display: flex;
  align-items: center;
}

.date-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.time-text {
  font-size: 26rpx;
  color: #999;
}

.record-right {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 26rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ff4d4f;
  border-radius: 8rpx;
}

.record-notes {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.notes-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载更多 */
.load-more,
.load-end {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.load-text,
.end-text {
  font-size: 26rpx;
  color: #999;
}