/* 健康报告页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 报告列表 */
.report-list {
  padding: 20rpx;
}

.report-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.report-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-badge.normal {
  background: #F6FFED;
  color: #52C41A;
}

.status-badge.warning {
  background: #FFF7E6;
  color: #FAAD14;
}

.status-badge.danger {
  background: #FFF2F0;
  color: #FF4D4F;
}

.report-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  min-width: 140rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 24rpx;
  color: #333;
}

.report-summary {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 25rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.report-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #1890FF;
  color: white;
}

.action-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}

/* 加载和空状态 */
.loading-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
  color: #CCC;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  width: 300rpx;
  height: 80rpx;
  background: #1890FF;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 详情弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.detail-modal {
  background: white;
  border-radius: 20rpx;
  width: 650rpx;
  max-width: 90vw;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.detail-info {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 15rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  min-width: 120rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 24rpx;
  color: #333;
}

.metrics-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.metric-item {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.metric-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.metric-status {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.metric-status.normal {
  background: #52C41A;
  color: white;
}

.metric-status.warning {
  background: #FAAD14;
  color: white;
}

.metric-status.danger {
  background: #FF4D4F;
  color: white;
}

.metric-value {
  margin-bottom: 10rpx;
}

.value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}

.metric-reference {
  font-size: 22rpx;
  color: #999;
}

.recommendations {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recommendation-item {
  background: #F8F9FA;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
}

.recommendation-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.primary {
  background: #1890FF;
  color: white;
}

.modal-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}