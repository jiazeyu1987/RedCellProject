/* pages/api-test/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.test-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #007AFF;
  padding-left: 16rpx;
}

.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.config-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.test-btn {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 24rpx;
  font-size: 30rpx;
  border-radius: 12rpx;
  background-color: #007AFF;
  color: white;
  border: none;
}

.test-btn:last-child {
  margin-bottom: 0;
}

.test-btn.success {
  background-color: #34C759;
}

.test-btn.error {
  background-color: #FF3B30;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid;
}

.result-item.success {
  background-color: #f0f9f0;
  border-left-color: #34C759;
}

.result-item.error {
  background-color: #fdf0f0;
  border-left-color: #FF3B30;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 26rpx;
  font-weight: 500;
}

.result-item.success .result-status {
  color: #34C759;
}

.result-item.error .result-status {
  color: #FF3B30;
}

.result-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  text-align: center;
  margin-top: 32rpx;
}

.clear-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.clear-btn:active {
  background-color: #e5e5e5;
}"