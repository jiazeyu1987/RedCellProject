/* 意见反馈页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 反馈表单 */
.feedback-form {
  margin: 20rpx;
}

.form-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.form-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单区块 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 反馈类型网格 */
.type-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  flex: 0 0 calc(50% - 10rpx);
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  background: #F8F9FA;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #1890FF;
  background: #F0F8FF;
  color: #1890FF;
}

.type-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.type-name {
  font-size: 26rpx;
  font-weight: bold;
}

/* 文本区域 */
.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.upload-image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
  border: 2rpx solid #E5E5E5;
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF4D4F;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
}

.upload-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #CCC;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  color: #999;
}

.upload-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 22rpx;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 15rpx;
}

/* 联系方式输入 */
.contact-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.contact-input:focus {
  border-color: #1890FF;
  background: white;
}

/* 提交区域 */
.submit-section {
  margin: 30rpx 0;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #1890FF, #52C41A);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.submit-btn.submitting {
  background: #CCC;
  box-shadow: none;
}

.contact-service-btn {
  width: 100%;
  height: 80rpx;
  background: white;
  color: #1890FF;
  border: 2rpx solid #1890FF;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

/* 历史反馈 */
.history-section {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.history-count {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.history-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.history-type {
  display: flex;
  align-items: center;
}

.type-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

.history-actions {
  display: flex;
  align-items: center;
}

.history-time {
  font-size: 22rpx;
  color: #999;
  margin-right: 15rpx;
}

.delete-history-btn {
  width: 40rpx;
  height: 40rpx;
  background: #F5F5F5;
  border-radius: 50%;
  border: none;
  color: #999;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.history-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
  word-break: break-all;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-status {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.status-submitted {
  background: #F0F8FF;
  color: #1890FF;
}

.status-processing {
  background: #FFF7E6;
  color: #FAAD14;
}

.status-replied {
  background: #F6FFED;
  color: #52C41A;
}

.status-closed {
  background: #F5F5F5;
  color: #999;
}

.image-count {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.image-icon {
  margin-right: 5rpx;
}

/* 空状态 */
.empty-history {
  text-align: center;
  padding: 80rpx 40rpx;
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
  color: #CCC;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #CCC;
}

/* 底部说明 */
.footer-note {
  margin: 40rpx 20rpx;
  text-align: center;
}

.note-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  line-height: 1.5;
}