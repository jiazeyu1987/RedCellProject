/* 用户详情页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(135deg, #1890FF, #722ED1);
  color: white;
  padding: 40rpx 30rpx;
}

.user-basic {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.real-name {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

.user-status-line {
  display: flex;
  gap: 15rpx;
}

.status-badge {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
}

.member-badge {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
}

.member-badge.vip {
  background: rgba(255, 193, 7, 0.9);
  color: #333;
}

.member-badge.regular {
  background: rgba(255, 255, 255, 0.2);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: rgba(255, 255, 255, 0.9);
  color: #1890FF;
  border-color: transparent;
}

.btn-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

/* 统计数据 */
.stats-row {
  display: flex;
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  border-right: 1rpx solid #F5F5F5;
}

.stat-item:last-child {
  border-right: none;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1890FF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 标签页 */
.tab-section {
  margin: 20rpx;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 15rpx;
  border-radius: 10rpx;
  white-space: nowrap;
}

.tab-item.active {
  background: #1890FF;
  color: white;
}

.tab-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 22rpx;
}

/* 标签页内容 */
.tab-content {
  margin: 0 20rpx 20rpx;
}

.info-section {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  background: #F8F9FA;
}

.info-list {
  padding: 0 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 160rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  text-align: right;
}

.info-value-row {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  gap: 15rpx;
}

.view-btn {
  background: #E6F7FF;
  color: #1890FF;
  border: 1rpx solid #91D5FF;
  border-radius: 15rpx;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  flex-shrink: 0;
  min-width: 30rpx;
  text-align: center;
}

/* 地址列表 */
.address-list {
  gap: 15rpx;
}

.address-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.address-info {
  flex: 1;
  margin-right: 20rpx;
}

.address-text {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
  line-height: 1.4;
}

.address-meta {
  margin-bottom: 15rpx;
}

.contact-info {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.address-tags {
  display: flex;
  gap: 10rpx;
}

.default-tag {
  background: #E6F7FF;
  color: #1890FF;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.visit-tag {
  background: #F6FFED;
  color: #52C41A;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.nav-btn {
  background: #1890FF;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.nav-icon {
  font-size: 18rpx;
  margin-right: 6rpx;
}

.address-footer {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #F5F5F5;
  padding-top: 15rpx;
}

.time-info {
  font-size: 20rpx;
  color: #999;
}

/* 服务列表 */
.service-list {
  gap: 15rpx;
}

.service-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.service-time {
  font-size: 22rpx;
  color: #666;
}

.service-cost {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.service-details {
  margin-bottom: 20rpx;
}

.service-nurse,
.service-duration,
.service-feedback {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.service-rating {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.rating-label {
  font-size: 22rpx;
  color: #666;
  margin-right: 10rpx;
}

.rating-stars {
  font-size: 20rpx;
  color: #FAAD14;
}

.detail-btn {
  width: 100%;
  background: #F0F8FF;
  color: #1890FF;
  border: 1rpx solid #91D5FF;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 24rpx;
}

/* 健康档案 */
.health-section {
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.health-info {
  padding: 0 30rpx 30rpx;
}

.health-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.health-item:last-child {
  border-bottom: none;
}

.health-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.health-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  text-align: right;
}

.health-value.good {
  color: #52C41A;
}

.health-value.warning {
  color: #FAAD14;
}

.preferred-services {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  justify-content: flex-end;
}

.service-tag {
  background: #E6F7FF;
  color: #1890FF;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 管理操作 */
.admin-actions {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 20rpx 40rpx;
}

.admin-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.admin-btn.primary {
  background: #1890FF;
  color: white;
}

.admin-btn.danger {
  background: #FF4D4F;
  color: white;
}