/* 用户管理页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 管理员头部 */
.admin-header {
  background: linear-gradient(135deg, #1890FF, #722ED1);
  color: white;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-info {
  flex: 1;
}

.admin-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.admin-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.exit-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.exit-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

/* 统计卡片 */
.stats-section {
  display: flex;
  gap: 15rpx;
  margin: 20rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 25rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
  position: relative;
}

.stat-card.active {
  border-left: 6rpx solid #52C41A;
}

.stat-card.inactive {
  border-left: 6rpx solid #FF4D4F;
}

.stat-number {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
}

/* 搜索区域 */
.search-section {
  margin: 0 20rpx;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 30rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 26rpx;
  background: transparent;
  padding-right: 60rpx;
}

.search-icon,
.clear-search {
  position: absolute;
  right: 25rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.clear-search {
  background: #CCC;
  border-radius: 50%;
  color: white;
  font-size: 18rpx;
}

/* 筛选区域 */
.filter-section {
  margin: 20rpx 0;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 0 20rpx;
  gap: 15rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  min-width: 120rpx;
  padding: 15rpx 20rpx;
  background: white;
  border-radius: 25rpx;
  border: 2rpx solid #E5E5E5;
  white-space: nowrap;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.filter-item.active {
  border-color: #1890FF;
  background: #F0F8FF;
  color: #1890FF;
}

.filter-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.filter-name {
  font-size: 22rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
}

.sort-controls,
.action-controls {
  display: flex;
  gap: 15rpx;
}

.sort-btn,
.order-btn,
.action-btn {
  background: #F8F9FA;
  border: 1rpx solid #E5E5E5;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.sort-icon,
.order-icon,
.action-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

/* 用户列表 */
.users-section {
  margin: 0 20rpx;
}

.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 15rpx;
}

.loading-icon {
  font-size: 60rpx;
  display: block;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

.user-list {
  gap: 15rpx;
}

.user-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.05);
  border-left: 6rpx solid #1890FF;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-basic {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #F0F8FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  margin-right: 15rpx;
}

.user-name-line {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.user-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.status-active {
  background: #52C41A;
}

.status-inactive {
  background: #FF4D4F;
}

.user-phone {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.user-tags {
  display: flex;
  gap: 10rpx;
}

.member-tag,
.service-tag {
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.member-tag.vip {
  background: #FFF7E6;
  color: #FAAD14;
}

.member-tag.regular {
  background: #F6FFED;
  color: #52C41A;
}

.service-tag {
  background: #F0F8FF;
  color: #1890FF;
}

.user-arrow {
  font-size: 24rpx;
  color: #CCC;
}

.user-details {
  border-top: 1rpx solid #F5F5F5;
  padding-top: 15rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 22rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #666;
  min-width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 15rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 25rpx;
  color: #CCC;
}

.empty-text {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-desc {
  display: block;
  font-size: 22rpx;
  color: #CCC;
  margin-bottom: 30rpx;
}

.clear-filter-btn {
  width: 200rpx;
  height: 60rpx;
  background: #1890FF;
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 安全提示 */
.security-footer {
  background: #FFF7E6;
  border: 1rpx solid #FAAD14;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 40rpx 20rpx 20rpx;
  text-align: center;
}

.security-text {
  display: block;
  font-size: 20rpx;
  color: #FAAD14;
  line-height: 1.5;
  margin-bottom: 5rpx;
}