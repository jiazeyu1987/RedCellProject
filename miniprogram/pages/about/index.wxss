/* 关于我们页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 应用头部 */
.app-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  padding: 60rpx 40rpx 80rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  backdrop-filter: blur(10rpx);
}

.logo-emoji {
  font-size: 60rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.app-version {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.app-description {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 通用区块样式 */
.achievements-section,
.features-section,
.milestones-section,
.team-section,
.company-section,
.social-section,
.legal-section,
.more-section {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 数据成就 */
.achievements-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.achievement-item {
  flex: 0 0 calc(50% - 10rpx);
  text-align: center;
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
}

.achievement-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.achievement-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1890FF;
  margin-bottom: 10rpx;
}

.achievement-label {
  font-size: 24rpx;
  color: #666;
}

/* 核心特色 */
.features-list {
  gap: 30rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F0F8FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 发展历程 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: #E5E5E5;
}

.milestone-item {
  position: relative;
  display: flex;
  margin-bottom: 40rpx;
}

.milestone-item::before {
  content: '';
  position: absolute;
  left: -28rpx;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #1890FF;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 0 0 2rpx #1890FF;
}

.milestone-item:last-child {
  margin-bottom: 0;
}

.milestone-year {
  min-width: 120rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #1890FF;
  margin-right: 30rpx;
  margin-top: 5rpx;
}

.milestone-content {
  flex: 1;
}

.milestone-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.milestone-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 核心团队 */
.team-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.team-member {
  flex: 0 0 calc(50% - 10rpx);
  text-align: center;
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #F0F8FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 auto 20rpx;
}

.member-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.member-position {
  display: block;
  font-size: 22rpx;
  color: #1890FF;
  margin-bottom: 8rpx;
}

.member-experience {
  font-size: 20rpx;
  color: #999;
}

/* 公司信息 */
.company-info {
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
  position: relative;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.copy-hint {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  color: #1890FF;
}

/* 关注我们 */
.social-list {
  gap: 20rpx;
}

.social-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.social-item:last-child {
  border-bottom: none;
}

.social-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.social-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.social-content {
  flex: 1;
}

.social-platform {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.social-account {
  font-size: 22rpx;
  color: #666;
}

.social-action {
  display: flex;
  align-items: center;
}

.qr-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.qr-text,
.action-text {
  font-size: 22rpx;
  color: #1890FF;
}

/* 法律信息和更多服务 */
.legal-links,
.service-links {
  display: flex;
  gap: 20rpx;
}

.legal-btn,
.service-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
  border: none;
  color: #333;
  font-size: 24rpx;
}

.legal-icon,
.service-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
  color: #1890FF;
}

/* 版权信息 */
.copyright-section {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
}

.copyright-text {
  display: block;
  font-size: 22rpx;
  line-height: 1.8;
}

/* 底部间距 */
.bottom-space {
  height: 100rpx;
}