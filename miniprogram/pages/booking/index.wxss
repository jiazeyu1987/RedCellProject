/* 服务预约页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #E5E5E5;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.step-item.active .step-number {
  background: #1890FF;
}

.step-text {
  font-size: 22rpx;
  color: #999;
}

.step-item.active .step-text {
  color: #1890FF;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background: #E5E5E5;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
}

.step-line.active {
  background: #1890FF;
}

/* 步骤内容 */
.step-content {
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-address {
  font-size: 26rpx;
  color: #1890FF;
  font-weight: normal;
}

/* 服务类型卡片 */
.service-list {
  margin-bottom: 30rpx;
}

.service-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid transparent;
  position: relative;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.service-card.selected {
  border-color: #1890FF;
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.service-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.service-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4444;
}

.service-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.service-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.feature-tag {
  background: #F0F8FF;
  color: #1890FF;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.check-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: #1890FF;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* 日期选择 */
.date-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.date-picker {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.date-item {
  min-width: 120rpx;
  text-align: center;
  padding: 20rpx 10rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  background: #F8F9FA;
}

.date-item.selected {
  border-color: #1890FF;
  background: #F0F8FF;
}

.date-text {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.date-item.selected .date-text {
  color: #1890FF;
}

.date-day {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.date-item.selected .date-day {
  color: #1890FF;
}

/* 时间段选择 */
.time-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.time-slot {
  flex: 0 0 160rpx;
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  position: relative;
}

.time-slot.selected {
  border-color: #1890FF;
  background: #F0F8FF;
}

.time-slot.disabled {
  background: #F5F5F5;
  color: #CCC;
}

.time-text {
  font-size: 26rpx;
  color: #333;
}

.time-slot.selected .time-text {
  color: #1890FF;
}

.time-slot.disabled .time-text {
  color: #CCC;
}

.time-status {
  font-size: 20rpx;
  color: #999;
  position: absolute;
  bottom: 5rpx;
}

/* 地址部分 */
.address-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.address-list {
  margin-top: 20rpx;
}

.address-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  background: #F8F9FA;
}

.address-item.selected {
  border-color: #1890FF;
  background: #F0F8FF;
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.contact-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.address-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.edit-btn {
  font-size: 24rpx;
  color: #1890FF;
  padding: 10rpx 20rpx;
  border: 1rpx solid #1890FF;
  border-radius: 20rpx;
}

/* 特殊需求 */
.special-needs {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.needs-input {
  width: 100%;
  min-height: 150rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
  margin-bottom: 10rpx;
}

.char-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

/* 确认信息 */
.confirm-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.confirm-section {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
}

.confirm-section:last-child {
  margin-bottom: 0;
}

.confirm-label {
  min-width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.confirm-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.confirm-value.price {
  color: #FF4444;
  font-weight: bold;
}

.confirm-address {
  flex: 1;
}

.address-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.address-detail {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 支付方式 */
.payment-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.payment-methods {
  margin-top: 20rpx;
}

.payment-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  background: #F8F9FA;
  position: relative;
}

.payment-item.selected {
  border-color: #1890FF;
  background: #F0F8FF;
}

.payment-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.payment-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 服务协议 */
.agreement-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.agreement-item {
  display: flex;
  align-items: flex-start;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.checkbox.checked {
  background: #1890FF;
  border-color: #1890FF;
}

.agreement-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.link {
  color: #1890FF;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.05);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #1890FF;
  color: white;
}

.action-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}

.action-btn.submit {
  font-weight: bold;
}

.action-btn[disabled] {
  background: #E5E5E5;
  color: #999;
}

/* 地址编辑弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.address-modal {
  background: white;
  border-radius: 20rpx;
  width: 650rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.picker-content {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
  color: #333;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.primary {
  background: #1890FF;
  color: white;
}

.modal-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}