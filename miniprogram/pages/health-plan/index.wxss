/* 健康计划页面样式 */
.container {
  background-color: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部统计区域 */
.stats-section {
  display: flex;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1890FF;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 快速添加区域 */
.quick-add-section {
  margin: 20rpx;
}

.add-plan-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #1890FF, #52C41A);
  color: white;
  border-radius: 20rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.add-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

/* 筛选区域 */
.filter-section {
  margin: 20rpx;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #1890FF;
  color: white;
}

/* 计划列表 */
.plans-section {
  margin: 0 20rpx;
}

.plan-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
  border-left: 8rpx solid #1890FF;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.plan-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.status-active {
  background: #52C41A;
}

.status-completed {
  background: #1890FF;
}

.status-paused {
  background: #FAAD14;
}

.plan-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 进度条 */
.plan-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #E5E5E5;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890FF, #52C41A);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #1890FF;
  font-weight: bold;
  min-width: 80rpx;
}

/* 计划信息 */
.plan-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  min-width: 160rpx;
}

.info-value {
  font-size: 24rpx;
  color: #333;
}

/* 操作按钮 */
.plan-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #1890FF;
  color: white;
}

.action-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}

.action-btn.success {
  background: #52C41A;
  color: white;
}

.action-btn.warning {
  background: #FAAD14;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  color: #CCC;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #CCC;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-action-btn {
  width: 300rpx;
  height: 80rpx;
  background: #1890FF;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F5F5F5;
  border: none;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.form-input:focus {
  border-color: #1890FF;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  background: #F8F9FA;
  font-size: 26rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.primary {
  background: #1890FF;
  color: white;
}

.modal-btn.secondary {
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E5E5E5;
}