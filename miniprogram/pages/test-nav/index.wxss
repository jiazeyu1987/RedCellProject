/* pages/test-nav/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 32rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.nav-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #007AFF;
}

.nav-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.15);
}

.nav-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 80rpx;
  text-align: center;
}

.nav-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.nav-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.nav-arrow {
  font-size: 32rpx;
  color: #007AFF;
  margin-left: 16rpx;
}

.config-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.config-value {
  font-size: 26rpx;
  color: #333;
  font-family: 'SF Mono', Consolas, monospace;
  background-color: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.actions {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #007AFF 0%, #5856d6 100%);
  color: white;
}

.action-btn.secondary {
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}"