/* 全局样式 */

/* 重置样式 */
view, text, image, button, input, textarea {
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  line-height: 1.6;
  color: #333333;
  background-color: #F8F9FA;
}

/* 通用工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.ml-10 {
  margin-left: 10rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-10 {
  margin-right: 10rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.p-10 {
  padding: 10rpx;
}

.p-20 {
  padding: 20rpx;
}

.p-30 {
  padding: 30rpx;
}

.font-12 {
  font-size: 24rpx;
}

.font-14 {
  font-size: 28rpx;
}

.font-16 {
  font-size: 32rpx;
}

.font-18 {
  font-size: 36rpx;
}

.font-bold {
  font-weight: bold;
}

.color-primary {
  color: #1890FF;
}

.color-success {
  color: #52C41A;
}

.color-warning {
  color: #FAAD14;
}

.color-error {
  color: #FF4D4F;
}

.color-secondary {
  color: #666666;
}

.bg-white {
  background-color: white;
}

.bg-primary {
  background-color: #1890FF;
}

.bg-success {
  background-color: #52C41A;
}

.bg-warning {
  background-color: #FAAD14;
}

.bg-error {
  background-color: #FF4D4F;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.card-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 通用按钮样式 */
.btn {
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #1890FF;
  color: white;
}

.btn-secondary {
  background: #F8F9FA;
  color: #666666;
  border: 1rpx solid #E5E5E5;
}

.btn-success {
  background: #52C41A;
  color: white;
}

.btn-warning {
  background: #FAAD14;
  color: white;
}

.btn-error {
  background: #FF4D4F;
  color: white;
}

.btn-small {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
}

.btn-medium {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
}

.btn-large {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  background: #E5E5E5 !important;
  color: #999 !important;
  border-color: #E5E5E5 !important;
}

/* 通用输入框样式 */
.input {
  height: 80rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.input:focus {
  border-color: #1890FF;
  background: white;
}

.input-error {
  border-color: #FF4D4F;
}

.textarea {
  min-height: 120rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

/* 通用列表样式 */
.list-item {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #666666;
}

.list-item-arrow {
  font-size: 28rpx;
  color: #CCC;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.tag-primary {
  background: #F0F8FF;
  color: #1890FF;
}

.tag-success {
  background: #F6FFED;
  color: #52C41A;
}

.tag-warning {
  background: #FFF7E6;
  color: #FAAD14;
}

.tag-error {
  background: #FFF2F0;
  color: #FF4D4F;
}

/* 通用分割线 */
.divider {
  height: 1rpx;
  background: #E5E5E5;
  margin: 30rpx 0;
}

/* 通用空状态 */
.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

/* 通用加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 固定底部按钮 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
  box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.05);
}