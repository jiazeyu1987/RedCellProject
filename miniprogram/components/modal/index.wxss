/* components/modal/index.wxss */

/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  opacity: 0;
  animation: fadeIn 0.3s ease-out forwards;
}

/* 居中显示 */
.modal-mask.center {
  align-items: center;
  justify-content: center;
}

/* 底部显示 */
.modal-mask.bottom {
  align-items: flex-end;
  justify-content: center;
}

/* 弹框容器 */
.modal-container {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  transform: scale(0.7);
  animation: scaleIn 0.3s ease-out forwards;
}

/* 居中容器 */
.center-container {
  max-width: 90%;
  margin: 0 20rpx;
}

/* 底部容器 */
.bottom-container {
  width: 100% !important;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  animation: slideUp 0.3s ease-out forwards;
}

/* 弹框头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #E5E5E5;
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  border-radius: 50%;
  background: #F5F5F5;
}

/* 弹框内容 */
.modal-content {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
}

/* 弹框底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #E5E5E5;
  flex-shrink: 0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.cancel {
  background: #F8F9FA;
  color: #666;
}

.modal-btn.confirm {
  background: #1890FF;
  color: white;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.7);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}