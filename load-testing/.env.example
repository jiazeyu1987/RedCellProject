# Health Guard Enhanced Load Testing Environment Configuration
# ================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=abcd1234!
DB_DATABASE=health_guard_db

# API Configuration
API_BASE_URL=http://localhost:3000/v1
API_TIMEOUT=10000

# Load Testing Configuration
TEST_BATCH_SIZE=10
MAX_USERS_PER_BATCH=500
ENABLE_DATABASE_INSERT=true
ENABLE_API_CALLS=false

# User Generation Settings
DEFAULT_USER_COUNT=50
MAX_CUSTOM_USER_COUNT=200

# Enhanced User Generation Options
INCLUDE_SUBSCRIPTIONS=true
INCLUDE_PAYMENTS=true
INCLUDE_ADDRESSES=true
INCLUDE_HEALTH_DATA=true

# Subscription Generation Settings
MAX_SUBSCRIPTIONS_PER_USER=3
SUBSCRIPTION_HISTORY_ENABLED=true

# Payment Generation Settings
MIN_PAYMENTS_PER_USER=1
MAX_PAYMENTS_PER_USER=8
INCLUDE_RANDOM_PAYMENTS=true

# Address Generation Settings
MIN_ADDRESSES_PER_USER=1
MAX_ADDRESSES_PER_USER=3
GUARANTEE_DEFAULT_ADDRESS=true

# Health Data Generation Settings
HEALTH_DATA_DAYS_BACK=90
MIN_HEALTH_RECORDS_PER_DAY=0
MAX_HEALTH_RECORDS_PER_DAY=3

# Cleanup Settings
CLEANUP_CONFIRMATION_REQUIRED=true
ENABLE_SAFE_MODE=true

# Logging and Debug
LOG_LEVEL=info
DEBUG_MODE=false
SHOW_PROGRESS=true

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000
BATCH_DELAY_MS=100