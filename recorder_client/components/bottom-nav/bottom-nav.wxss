/* 底部导航栏组件样式 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1000;
}

.nav-items {
  display: flex;
  height: 120rpx;
  align-items: center;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 8rpx;
  transition: all 0.2s ease;
}

.nav-item:active {
  opacity: 0.7;
  transform: scale(0.95);
}

/* 图标样式 */
.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon-image {
  width: 48rpx;
  height: 48rpx;
}

.nav-icon-text {
  font-size: 32rpx;
  color: #999999;
  transition: color 0.2s ease;
}

.nav-icon-text-active {
  color: #0F7AFF;
}

/* 文字样式 */
.nav-text {
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  line-height: 1.2;
  transition: color 0.2s ease;
}

.nav-text-active {
  color: #0F7AFF;
  font-weight: 500;
}

/* 激活状态 */
.nav-item-active {
  color: #0F7AFF;
}

/* 角标样式 */
.nav-badge {
  position: absolute;
  top: 4rpx;
  right: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff4444;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.nav-badge-text {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 500;
  padding: 0 8rpx;
  line-height: 1;
}

.nav-badge-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff4444;
  border-radius: 8rpx;
}

/* 主题色彩变体 */
.bottom-nav.theme-primary .nav-text-active,
.bottom-nav.theme-primary .nav-icon-text-active,
.bottom-nav.theme-primary .nav-item-active {
  color: #0F7AFF;
}

.bottom-nav.theme-success .nav-text-active,
.bottom-nav.theme-success .nav-icon-text-active,
.bottom-nav.theme-success .nav-item-active {
  color: #52c41a;
}

.bottom-nav.theme-warning .nav-text-active,
.bottom-nav.theme-warning .nav-icon-text-active,
.bottom-nav.theme-warning .nav-item-active {
  color: #faad14;
}

/* 暗色主题 */
.bottom-nav.theme-dark {
  background: #1a1a1a;
  border-top-color: #333333;
}

.bottom-nav.theme-dark .nav-text {
  color: #cccccc;
}

.bottom-nav.theme-dark .nav-icon-text {
  color: #cccccc;
}

.bottom-nav.theme-dark .nav-text-active,
.bottom-nav.theme-dark .nav-icon-text-active,
.bottom-nav.theme-dark .nav-item-active {
  color: #0F7AFF;
}