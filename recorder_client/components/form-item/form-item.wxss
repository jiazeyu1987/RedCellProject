/* 表单项组件样式 */
.form-item {
  padding: 24rpx 0;
  position: relative;
}

/* 标签样式 */
.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  position: relative;
}

.label-text {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.label-required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 32rpx;
}

.label-extra {
  margin-left: auto;
}

/* 表单控件 */
.form-control {
  position: relative;
  display: flex;
  align-items: center;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
}

.form-input:focus {
  border-color: #007AFF;
  outline: none;
}

.form-input[disabled] {
  background: #f5f5f5;
  color: #999999;
  cursor: not-allowed;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  resize: none;
  transition: border-color 0.2s ease;
}

.form-textarea:focus {
  border-color: #007AFF;
  outline: none;
}

.form-textarea[disabled] {
  background: #f5f5f5;
  color: #999999;
  cursor: not-allowed;
}

/* 选择器样式 */
.form-picker {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
}

.form-picker:active {
  border-color: #007AFF;
}

.form-picker-disabled {
  background: #f5f5f5;
  color: #999999;
  pointer-events: none;
}

.picker-text {
  flex: 1;
  font-size: 32rpx;
  color: #1a1a1a;
}

.picker-placeholder {
  color: #999999;
}

.picker-arrow {
  color: #cccccc;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 单选框组样式 */
.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
}

.radio-text {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #1a1a1a;
}

/* 复选框组样式 */
.checkbox-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
}

.checkbox-text {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #1a1a1a;
}

/* 自定义内容 */
.form-custom {
  width: 100%;
}

/* 右侧图标 */
.form-icon {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.icon-image {
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
}

/* 帮助文本 */
.form-help {
  margin-top: 8rpx;
}

.help-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 错误信息 */
.form-error {
  margin-top: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  line-height: 1.4;
}

/* 必填项标识 */
.form-item-required .form-input,
.form-item-required .form-textarea,
.form-item-required .form-picker {
  border-left: 4rpx solid #007AFF;
}

/* 错误状态 */
.form-item-error .form-input,
.form-item-error .form-textarea,
.form-item-error .form-picker {
  border-color: #ff4d4f;
  background: #fff2f0;
}

.form-item-error .label-text {
  color: #ff4d4f;
}

/* 紧凑模式 */
.form-item.form-item-compact {
  padding: 16rpx 0;
}

.form-item.form-item-compact .form-label {
  margin-bottom: 12rpx;
}

.form-item.form-item-compact .form-input,
.form-item.form-item-compact .form-picker {
  height: 72rpx;
}

.form-item.form-item-compact .form-textarea {
  min-height: 120rpx;
}

/* 内联模式 */
.form-item.form-item-inline {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.form-item.form-item-inline .form-label {
  margin-bottom: 0;
  margin-right: 24rpx;
  min-width: 160rpx;
  flex-shrink: 0;
}

.form-item.form-item-inline .form-control {
  flex: 1;
}

/* 无边框模式 */
.form-item.form-item-borderless .form-input,
.form-item.form-item-borderless .form-textarea,
.form-item.form-item-borderless .form-picker {
  border: none;
  background: #f8f8f8;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-item {
    padding: 20rpx 0;
  }
  
  .form-input,
  .form-picker {
    height: 80rpx;
    padding: 0 20rpx;
  }
  
  .form-textarea {
    min-height: 140rpx;
    padding: 20rpx;
  }
}