/* 表单项组件样式 */
.form-item {
  padding: 24rpx 0;
  position: relative;
}

/* 标签样式 */
.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  position: relative;
}

.label-text {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.label-required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 32rpx;
}

.label-extra {
  margin-left: auto;
}

/* 表单控件 */
.form-control {
  position: relative;
  display: flex;
  align-items: center;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
}

.form-input:focus {
  border-color: #007AFF;
  outline: none;
}

.form-input[disabled] {
  background: #f5f5f5;
  color: #999999;
  cursor: not-allowed;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  resize: none;
  transition: border-color 0.2s ease;
}

.form-textarea:focus {
  border-color: #007AFF;
  outline: none;
}

.form-textarea[disabled] {
  background: #f5f5f5;
  color: #999999;
  cursor: not-allowed;
}

/* 选择器样式 */
.form-picker {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border: 2rpx solid #e0e6ed;
  border-radius: 16rpx;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.form-picker::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.05) 0%, rgba(0, 122, 255, 0.02) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.form-picker:active {
  border-color: #007AFF;
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.15);
}

.form-picker:active::before {
  opacity: 1;
}

.form-picker-disabled {
  background: #f5f5f5;
  color: #999999;
  pointer-events: none;
  box-shadow: none;
}

.picker-text {
  flex: 1;
  font-size: 34rpx;
  color: #1a1a1a;
  font-weight: 500;
  line-height: 1.4;
}

.picker-placeholder {
  color: #9ca3af;
  font-weight: 400;
}

.picker-arrow {
  color: #6b7280;
  font-size: 32rpx;
  margin-left: 20rpx;
  font-weight: bold;
  transition: transform 0.3s ease;
}

.form-picker:active .picker-arrow {
  transform: rotate(90deg);
  color: #007AFF;
}

/* 单选框组样式 */
radio-group {
  display: flex;
  flex-direction: row;
  gap: 32rpx;
  flex-wrap: wrap;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #f8f9fa;
  border: 2rpx solid #e5e5e7;
  border-radius: 25rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
  min-width: 200rpx;
  justify-content: center;
}

.radio-item:active {
  transform: scale(0.98);
  background: #e8f4fd;
  border-color: #007aff;
}

.radio-item radio {
  margin-right: 12rpx;
}

.radio-text {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 选中状态的单选框样式 */
.radio-item-checked {
  background: linear-gradient(135deg, #007aff, #0056d6) !important;
  border-color: #007aff !important;
  box-shadow: 0 4rpx 8rpx rgba(0, 122, 255, 0.3);
}

.radio-item-checked .radio-text {
  color: #fff !important;
}

/* 复选框组样式 */
.checkbox-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
}

.checkbox-text {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #1a1a1a;
}

/* 自定义内容 */
.form-custom {
  width: 100%;
}

/* 右侧图标 */
.form-icon {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.icon-image {
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
}

/* 帮助文本 */
.form-help {
  margin-top: 8rpx;
}

.help-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 错误信息 */
.form-error {
  margin-top: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  line-height: 1.4;
}

/* 必填项标识 */
.form-item-required .form-input,
.form-item-required .form-textarea,
.form-item-required .form-picker {
  border-left: 4rpx solid #007AFF;
}

/* 错误状态 */
.form-item-error .form-input,
.form-item-error .form-textarea,
.form-item-error .form-picker {
  border-color: #ff4d4f;
  background: #fff2f0;
}

.form-item-error .label-text {
  color: #ff4d4f;
}

/* 紧凑模式 */
.form-item.form-item-compact {
  padding: 16rpx 0;
}

.form-item.form-item-compact .form-label {
  margin-bottom: 12rpx;
}

.form-item.form-item-compact .form-input,
.form-item.form-item-compact .form-picker {
  height: 72rpx;
}

.form-item.form-item-compact .form-textarea {
  min-height: 120rpx;
}

/* 内联模式 */
.form-item.form-item-inline {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.form-item.form-item-inline .form-label {
  margin-bottom: 0;
  margin-right: 24rpx;
  min-width: 160rpx;
  flex-shrink: 0;
}

.form-item.form-item-inline .form-control {
  flex: 1;
}

/* 无边框模式 */
.form-item.form-item-borderless .form-input,
.form-item.form-item-borderless .form-textarea,
.form-item.form-item-borderless .form-picker {
  border: none;
  background: #f8f8f8;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-item {
    padding: 20rpx 0;
  }
  
  .form-input,
  .form-picker {
    height: 80rpx;
    padding: 0 20rpx;
  }
  
  .form-textarea {
    min-height: 140rpx;
    padding: 20rpx;
  }
}