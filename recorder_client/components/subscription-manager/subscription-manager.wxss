/* components/subscription-manager/subscription-manager.wxss */

.subscription-manager-modal {
  z-index: 1000;
}

.subscription-manager {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 统计区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
}

.stats-item {
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stats-number.subscribed {
  color: #4CAF50;
}

.stats-number.required {
  color: #FF9800;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 快捷操作区域 */
.actions-section {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.batch-subscribe-btn,
.refresh-btn {
  flex: 1;
}

/* 订阅列表 */
.subscription-list {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 32rpx;
}

.subscription-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.subscription-item:last-child {
  margin-bottom: 0;
}

.subscription-item.subscribed {
  border-color: #4CAF50;
  background: #f1f8e9;
}

.subscription-item.unsubscribed {
  border-color: #e0e0e0;
}

.subscription-info {
  flex: 1;
  margin-right: 16rpx;
}

.subscription-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.subscription-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.required-tag {
  background: #FF9800;
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: normal;
}

.subscription-status {
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.subscription-status.active {
  background: #4CAF50;
  color: white;
}

.subscription-status.inactive {
  background: #e0e0e0;
  color: #666;
}

.subscription-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.subscription-meta {
  font-size: 22rpx;
  color: #999;
}

.subscription-action {
  flex-shrink: 0;
}

.toggle-btn {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 说明信息 */
.notice-section {
  background: #fff3cd;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid #ffeaa7;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #856404;
  margin-bottom: 16rpx;
}

.notice-content {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

.notice-item {
  margin-bottom: 8rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .subscription-manager {
    padding: 24rpx;
  }
  
  .stats-section {
    padding: 24rpx;
  }
  
  .stats-number {
    font-size: 40rpx;
  }
  
  .actions-section {
    flex-direction: column;
  }
  
  .subscription-item {
    flex-direction: column;
    align-items: stretch;
  }
  
  .subscription-info {
    margin-right: 0;
    margin-bottom: 16rpx;
  }
  
  .subscription-action {
    align-self: center;
  }
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 暗黑模式支持 */
@media (prefers-color-scheme: dark) {
  .subscription-manager {
    background: #1a1a1a;
    color: #ffffff;
  }
  
  .subscription-list {
    background: #2d2d2d;
  }
  
  .subscription-item {
    background: #1a1a1a;
    color: #ffffff;
  }
  
  .subscription-item.subscribed {
    background: #1e3a2e;
    border-color: #4CAF50;
  }
  
  .subscription-item.unsubscribed {
    border-color: #444;
  }
  
  .subscription-name {
    color: #ffffff;
  }
  
  .subscription-description {
    color: #cccccc;
  }
  
  .subscription-meta {
    color: #999;
  }
  
  .notice-section {
    background: #2d2a24;
    border-color: #5d5b54;
  }
  
  .notice-title,
  .notice-content {
    color: #d4c5a9;
  }
}

/* 动画效果 */
.subscription-item {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.3s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.subscription-item:nth-child(1) { animation-delay: 0.1s; }
.subscription-item:nth-child(2) { animation-delay: 0.2s; }
.subscription-item:nth-child(3) { animation-delay: 0.3s; }
.subscription-item:nth-child(4) { animation-delay: 0.4s; }
.subscription-item:nth-child(5) { animation-delay: 0.5s; }

/* 点击反馈 */
.subscription-info:active {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
}

.toggle-btn:active {
  transform: scale(0.95);
}

/* 状态指示器 */
.subscription-status {
  position: relative;
}

.subscription-status.active::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #4CAF50;
}

.subscription-status.inactive::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #e0e0e0;
}