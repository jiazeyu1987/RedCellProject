/* 家庭成员卡片组件样式 */
.member-card {
  background: linear-gradient(135deg, #fff 0%, #fafbfc 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06), 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  backdrop-filter: blur(10rpx);
}

.member-card:active {
  transform: scale(0.97) translateY(2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12), 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.member-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 卡片主要内容 */
.member-main {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  gap: 20rpx;
}

/* 左侧头像区域 */
.member-avatar-section {
  flex-shrink: 0;
}

.avatar-container {
  position: relative;
  width: 96rpx;
  height: 96rpx;
}

.member-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #f5f6fa 0%, #e9ecef 100%);
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.member-avatar:hover {
  transform: scale(1.05);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.status-indicator {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.status-indicator.active {
  background: #34c759;
}

.status-indicator.inactive {
  background: #8e8e93;
}

.age-group-badge {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid #fff;
}

.age-group-badge.child {
  background: linear-gradient(135deg, #5AC8FA 0%, #007AFF 100%);
}

.age-group-badge.adult {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
}

.age-group-badge.elderly {
  background: linear-gradient(135deg, #FF9500 0%, #FF6B35 100%);
}

.age-group-text {
  transform: scale(0.8);
}

/* 中间信息区域 */
.member-info {
  flex: 1;
  min-width: 0;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

/* 基础信息行 */
.basic-info {
  margin-bottom: 16rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #1d1d1f 0%, #333 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.member-age {
  font-size: 26rpx;
  color: #666;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  font-weight: 500;
}

.member-gender {
  display: flex;
  align-items: center;
}

.gender-icon {
  color: #666;
}

.member-relationship {
  font-size: 24rpx;
  color: #007AFF;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.15) 0%, rgba(0, 122, 255, 0.08) 100%);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(0, 122, 255, 0.1);
}

/* 联系信息行 */
.contact-info {
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.contact-icon {
  flex-shrink: 0;
}

.contact-text {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}

/* 健康状态行 */
.health-info {
  flex-wrap: wrap;
  gap: 12rpx;
}

.health-status,
.service-frequency {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.last-service {
  margin-left: auto;
}

.last-service-text {
  font-size: 22rpx;
  color: #8e8e93;
}

/* 详细信息行 */
.detail-info {
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #f0f0f0;
}

.medical-info,
.allergy-info,
.medication-info {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  width: 100%;
}

.medical-label,
.allergy-label,
.medication-label {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  margin-top: 4rpx;
}

.medical-tags,
.allergy-tags,
.medication-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
}

.medical-tag,
.allergy-tag,
.medication-tag {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f5f6fa 0%, #e9ecef 100%);
  color: #666;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  font-weight: 500;
}

.allergy-tag {
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.15) 0%, rgba(255, 59, 48, 0.08) 100%);
  color: #ff3b30;
  border: 1rpx solid rgba(255, 59, 48, 0.2);
}

.medication-tag {
  background: linear-gradient(135deg, rgba(52, 199, 89, 0.15) 0%, rgba(52, 199, 89, 0.08) 100%);
  color: #34c759;
  border: 1rpx solid rgba(52, 199, 89, 0.2);
}

/* 右侧操作区域 */
.member-actions {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-button {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f5f6fa 0%, #e9ecef 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 100%);
  border-radius: 28rpx;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.action-button:hover::before {
  opacity: 1;
}

.action-button:active {
  transform: scale(0.85);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.action-button:hover {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.action-button.contact {
  background: rgba(0, 122, 255, 0.1);
}

.action-button.appointment {
  background: rgba(90, 200, 250, 0.1);
}

.action-button.health {
  background: rgba(52, 199, 89, 0.1);
}

.action-button.history {
  background: rgba(255, 149, 0, 0.1);
}

.detail-arrow {
  margin-top: auto;
}

/* 卡片底部 */
.member-footer {
  padding: 0 24rpx 24rpx;
  border-top: 1px solid #f0f0f0;
  margin-top: 16rpx;
  padding-top: 16rpx;
}

.footer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.footer-item:last-child {
  margin-bottom: 0;
}

.footer-label {
  font-size: 24rpx;
  color: #8e8e93;
}

.footer-value {
  font-size: 24rpx;
  color: #666;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 优先级指示器 */
.priority-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse 2s infinite;
}

.priority-indicator.critical {
  background: #ff3b30;
}

.priority-indicator.high {
  background: #ff9500;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 59, 48, 0.7);
  }
  70% {
    box-shadow: 0 0 0 16rpx rgba(255, 59, 48, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 59, 48, 0);
  }
}

/* 紧凑模式样式 */
.member-card.compact {
  margin-bottom: 16rpx;
}

.member-card.compact .member-main {
  padding: 16rpx;
}

.member-card.compact .avatar-container {
  width: 72rpx;
  height: 72rpx;
}

.member-card.compact .member-name {
  font-size: 28rpx;
}

.member-card.compact .quick-actions {
  flex-direction: row;
  gap: 8rpx;
}

.member-card.compact .action-button {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
}

/* 详细模式样式 */
.member-card.detailed {
  margin-bottom: 32rpx;
}

.member-card.detailed .member-main {
  padding: 32rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .member-main {
    padding: 20rpx;
    gap: 16rpx;
  }
  
  .avatar-container {
    width: 80rpx;
    height: 80rpx;
  }
  
  .member-name {
    font-size: 28rpx;
  }
  
  .contact-text {
    max-width: 300rpx;
  }
  
  .footer-value {
    max-width: 200rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .member-card {
    background: #2c2c2e;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .member-name {
    color: #fff;
  }
  
  .member-age,
  .contact-text,
  .footer-value {
    color: #8e8e93;
  }
  
  .action-button {
    background: #3a3a3c;
  }
  
  .member-footer {
    border-top-color: #38383a;
  }
  
  .detail-info {
    border-top-color: #38383a;
  }
  
  .medical-tag,
  .medication-tag {
    background: #3a3a3c;
    color: #8e8e93;
  }
}