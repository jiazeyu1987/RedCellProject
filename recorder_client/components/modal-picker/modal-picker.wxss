/* 模态选择器样式 */
.modal-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease;
  max-height: 80vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e7;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  text-align: center;
  flex: 1;
}

.close-btn {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #f2f2f7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: #e5e5ea;
  transform: translateY(-50%) scale(0.95);
}

.close-icon {
  font-size: 40rpx;
  color: #8e8e93;
  line-height: 1;
}

.picker-content {
  padding: 20rpx 0;
  max-height: 400rpx;
  overflow: hidden;
}

.picker-view {
  height: 400rpx;
}

.picker-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
}

.picker-item-content {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.picker-item:nth-child(2n) .picker-item-content {
  background: rgba(0, 122, 255, 0.05);
}

.picker-color-indicator {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.picker-item-text {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
  flex: 1;
}

.modal-footer {
  display: flex;
  padding: 24rpx 40rpx 40rpx;
  gap: 24rpx;
  background: #f8f9fa;
  border-radius: 0 0 24rpx 24rpx;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.footer-btn:active {
  transform: scale(0.98);
}

.cancel-btn {
  background: #ffffff !important;
  border: 2rpx solid #e5e5e7 !important;
  color: #86868b !important;
}

.cancel-btn:active {
  background: #f2f2f7 !important;
}

.confirm-btn {
  background: #007aff !important;
  color: #ffffff !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.confirm-btn:active {
  background: #0056d6 !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .modal-content {
    background: #1c1c1e;
  }
  
  .modal-header {
    border-bottom-color: #38383a;
  }
  
  .modal-title,
  .picker-item-text {
    color: #ffffff;
  }
  
  .close-btn {
    background: #2c2c2e;
  }
  
  .close-icon {
    color: #8e8e93;
  }
  
  .picker-item:nth-child(2n) .picker-item-content {
    background: rgba(0, 122, 255, 0.1);
  }
  
  .modal-footer {
    background: #1c1c1e;
  }
  
  .cancel-btn {
    background: #2c2c2e !important;
    border-color: #48484a !important;
    color: #ffffff !important;
  }
  
  .cancel-btn:active {
    background: #3a3a3c !important;
  }
}