/* 家庭关系图谱组件样式 */

.family-relationship-map {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 工具栏样式 */
.map-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.toolbar-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.toolbar-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.member-count {
  font-size: 24rpx;
  opacity: 0.9;
}

.toolbar-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 12rpx;
  color: white;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.tool-btn.primary {
  background: rgba(255, 255, 255, 0.3);
}

.tool-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.tool-icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.tool-label {
  font-size: 20rpx;
  opacity: 0.9;
}

/* Canvas容器 */
.map-canvas-container {
  position: relative;
  width: 100%;
  flex: 1;
  background: #ffffff;
}

.map-canvas {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.empty-action:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

/* 图例说明 */
.map-legend {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 5;
}

.legend-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.legend-items {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.legend-icon.male {
  background-color: #4A90E2;
}

.legend-icon.female {
  background-color: #F5A623;
}

.legend-icon.selected {
  background-color: #F5A623;
  box-shadow: 0 0 0 4rpx rgba(245, 166, 35, 0.3);
}

.legend-line {
  width: 24rpx;
  height: 2rpx;
  background-color: #B8B8B8;
}

.legend-label {
  font-size: 22rpx;
  color: #666666;
}

/* 缩放控制 */
.zoom-controls {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 12rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 5;
}

.zoom-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin: 4rpx 0;
  transition: all 0.2s ease;
}

.zoom-btn:active {
  background: #357ABD;
  transform: scale(0.95);
}

.zoom-value {
  font-size: 20rpx;
  color: #666666;
  margin: 8rpx 0;
  font-weight: 500;
}

/* 节点信息卡片 */
.node-info-card {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 20;
}

.node-info-card.show {
  transform: translateY(0);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4A90E2;
}

.avatar-placeholder.female {
  background: #F5A623;
}

.avatar-icon {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.member-details {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.member-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.member-status.status-healthy {
  background: #e8f5e8;
  color: #52c41a;
}

.member-status.status-chronic {
  background: #fff7e6;
  color: #fa8c16;
}

.member-status.status-critical {
  background: #fff1f0;
  color: #ff4d4f;
}

.member-status.status-unknown {
  background: #f6f6f6;
  color: #999999;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  color: #999999;
  font-size: 28rpx;
  font-weight: bold;
}

.card-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 24rpx;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #f8f9fa;
  border: none;
  border-radius: 12rpx;
  color: #4A90E2;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-label {
  font-size: 24rpx;
  font-weight: 500;
}

/* 关系建立弹窗 */
.relationship-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.relationship-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.relationship-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  color: #999999;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.relationship-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.member-list {
  max-height: 300rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.member-item:last-child {
  border-bottom: none;
}

.member-item.selected {
  background: #e6f7ff;
  border-color: #4A90E2;
}

.member-item:active {
  background: #f5f5f5;
}

.member-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.member-avatar-small image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder-small {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4A90E2;
}

.avatar-placeholder-small.female {
  background: #F5A623;
}

.avatar-icon-small {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.member-info-small {
  flex: 1;
}

.member-name-small {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

.member-age-small {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.relationship-types {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120rpx, 1fr));
  gap: 16rpx;
}

.relationship-type-btn {
  padding: 20rpx 16rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  color: #333333;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s ease;
}

.relationship-type-btn.selected {
  background: #e6f7ff;
  border-color: #4A90E2;
  color: #4A90E2;
}

.relationship-type-btn:active {
  transform: scale(0.98);
}

.modal-footer {
  display: flex;
  padding: 24rpx;
  gap: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s ease;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666666;
}

.modal-btn.cancel:active {
  background: #e8e8e8;
}

.modal-btn.confirm {
  background: #4A90E2;
  color: white;
}

.modal-btn.confirm:active {
  background: #357ABD;
}

.modal-btn.confirm[disabled] {
  background: #d9d9d9;
  color: #ffffff;
  pointer-events: none;
}

/* 操作提示 */
.operation-tips {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  z-index: 10;
}

.operation-tips.show {
  opacity: 1;
  transform: translateY(0);
}

.tip-content {
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .toolbar-right {
    gap: 12rpx;
  }
  
  .tool-btn {
    padding: 10rpx 12rpx;
  }
  
  .legend-items {
    gap: 6rpx;
  }
  
  .card-actions {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .action-btn {
    min-width: 140rpx;
  }
}

/* 暗色主题适配 */
@media (prefers-color-scheme: dark) {
  .family-relationship-map {
    background-color: #1a1a1a;
  }
  
  .map-canvas {
    background-color: #2d2d2d;
  }
  
  .node-info-card,
  .modal-content {
    background-color: #2d2d2d;
    color: white;
  }
  
  .card-header {
    border-bottom-color: #444444;
  }
  
  .member-name {
    color: white;
  }
  
  .member-details {
    color: #cccccc;
  }
  
  .action-btn {
    background-color: #3a3a3a;
    color: #4A90E2;
  }
  
  .modal-header {
    border-bottom-color: #444444;
  }
  
  .modal-title {
    color: white;
  }
}