/* 成员统计组件样式 */
.member-statistics {
  background: #fff;
  border-radius: 16rpx;
  margin: 16rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

/* 动画类 */
.member-statistics.fade-in {
  animation: fadeIn 0.6s ease;
}

.member-statistics.refresh {
  animation: refreshPulse 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes refreshPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

/* 统计头部 */
.statistics-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid #f0f0f0;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.refresh-button,
.toggle-button {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f6fa;
  border-radius: 28rpx;
  transition: all 0.2s ease;
}

.refresh-button:active,
.toggle-button:active {
  transform: scale(0.9);
  background: #e8eaed;
}

/* 统计网格 */
.statistics-grid {
  display: grid;
  gap: 1px;
  background: #f0f0f0;
  transition: all 0.3s ease;
}

.statistics-grid.simple {
  grid-template-columns: repeat(2, 1fr);
}

.statistics-grid.detailed {
  grid-template-columns: repeat(2, 1fr);
}

/* 统计项 */
.stat-item {
  background: #fff;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(0, 122, 255, 0.02) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-item:active {
  transform: scale(0.98);
}

.stat-item:active::before {
  opacity: 1;
}

/* 统计图标 */
.stat-icon-container {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 统计内容 */
.stat-content {
  flex: 1;
  min-width: 0;
}

.stat-value-section {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1d1d1f;
  line-height: 1;
}

.stat-unit {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.stat-trend {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  margin-left: auto;
}

.stat-trend.up {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.stat-trend.down {
  background: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.stat-trend.stable {
  background: rgba(142, 142, 147, 0.1);
  color: #8e8e93;
}

.stat-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-title {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.stat-description {
  font-size: 20rpx;
  color: #8e8e93;
  line-height: 1.3;
}

/* 点击指示器 */
.stat-indicator {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  opacity: 0.3;
  transition: opacity 0.2s ease;
}

.stat-item:active .stat-indicator {
  opacity: 0.8;
}

/* 详细信息区域 */
.statistics-detail {
  padding: 24rpx;
  border-top: 1px solid #f0f0f0;
  background: #fafbfc;
}

/* 趋势分析 */
.trend-analysis {
  margin-bottom: 24rpx;
}

.analysis-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.analysis-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.trend-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #fff;
  border-radius: 12rpx;
}

.trend-label {
  font-size: 24rpx;
  color: #666;
}

.trend-change {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.trend-change.up {
  color: #34c759;
}

.trend-change.down {
  color: #ff3b30;
}

.trend-change.stable {
  color: #8e8e93;
}

/* 快速洞察 */
.quick-insights {
  
}

.insights-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.insights-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.insight-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.insight-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background: #fff;
}

.insight-item.warning {
  background: rgba(255, 149, 0, 0.1);
  border-left: 4rpx solid #ff9500;
}

.insight-item.info {
  background: rgba(0, 122, 255, 0.1);
  border-left: 4rpx solid #007AFF;
}

.insight-item.success {
  background: rgba(52, 199, 89, 0.1);
  border-left: 4rpx solid #34c759;
}

.insight-item.tip {
  background: rgba(88, 86, 214, 0.1);
  border-left: 4rpx solid #5856d6;
}

.insight-text {
  font-size: 22rpx;
  color: #333;
  line-height: 1.4;
}

/* 加载状态 */
.statistics-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 24rpx;
  gap: 16rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #666;
}

/* 特定统计项样式 */
.stat-item.total .stat-value {
  color: #007AFF;
}

.stat-item.activeMembers .stat-value {
  color: #34C759;
}

.stat-item.pendingService .stat-value {
  color: #FF9500;
}

.stat-item.averageAge .stat-value {
  color: #5856D6;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .member-statistics {
    margin: 12rpx 20rpx;
  }
  
  .statistics-header {
    padding: 20rpx;
  }
  
  .stat-item {
    padding: 20rpx;
    gap: 12rpx;
  }
  
  .stat-icon-container {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
  }
  
  .stat-value {
    font-size: 36rpx;
  }
  
  .statistics-detail {
    padding: 20rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .member-statistics {
    background: #2c2c2e;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .statistics-header {
    border-bottom-color: #38383a;
  }
  
  .title-text,
  .analysis-text,
  .insights-text {
    color: #fff;
  }
  
  .statistics-grid {
    background: #38383a;
  }
  
  .stat-item {
    background: #2c2c2e;
  }
  
  .stat-value {
    color: #fff;
  }
  
  .stat-title,
  .trend-label,
  .insight-text {
    color: #8e8e93;
  }
  
  .statistics-detail {
    background: #1c1c1e;
    border-top-color: #38383a;
  }
  
  .trend-item,
  .insight-item {
    background: #2c2c2e;
  }
  
  .refresh-button,
  .toggle-button {
    background: #3a3a3c;
  }
  
  .refresh-button:active,
  .toggle-button:active {
    background: #48484a;
  }
}