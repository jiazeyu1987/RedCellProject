/* 错误状态组件样式 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.error-icon {
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.error-content {
  margin-bottom: 40rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.error-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  max-width: 480rpx;
}

.error-action {
  width: 100%;
  max-width: 320rpx;
}

.action-button {
  width: 100%;
  height: 88rpx;
  background: #007AFF;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-button:active {
  background: #0056cc;
  transform: scale(0.98);
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .error-title {
    color: #fff;
  }
  
  .error-description {
    color: #8e8e93;
  }
}