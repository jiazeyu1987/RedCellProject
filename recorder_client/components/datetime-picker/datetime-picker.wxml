<view class="datetime-picker {{customClass}}">
  <!-- ËæìÂÖ•Ê°ÜÊòæÁ§∫Âå∫Âüü -->
  <view class="picker-input {{disabled ? 'disabled' : ''}}" bindtap="showPicker">
    <text class="input-text {{!displayText || displayText === placeholder ? 'placeholder' : ''}}">
      {{displayText || placeholder}}
    </text>
    <text class="input-icon">üìÖ</text>
  </view>

  <!-- ÈÄâÊã©Âô®ÂºπÁ™ó -->
  <view wx:if="{{pickerVisible}}" class="picker-modal">
    <view class="modal-mask" bindtap="hidePicker"></view>
    
    <view class="picker-container">
      <!-- ÂºπÁ™óÂ§¥ÈÉ® -->
      <view class="picker-header">
        <view class="header-btn cancel-btn" bindtap="onCancel">ÂèñÊ∂à</view>
        <view class="header-title">ÈÄâÊã©Êó∂Èó¥</view>
        <view class="header-btn confirm-btn" bindtap="onConfirm">Á°ÆÂÆö</view>
      </view>

      <!-- ÈÄâÊã©Âô®ÂÜÖÂÆπ -->
      <view class="picker-content">
        <!-- Êó•ÊúüÈÄâÊã©Âô® -->
        <view wx:if="{{type === 'date' || type === 'datetime'}}" class="date-picker-section">
          <view class="section-title">Êó•Êúü</view>
          <picker-view 
            class="date-picker"
            value="{{datePickerValue}}"
            bindchange="onDatePickerChange">
            
            <!-- Âπ¥‰ªΩÂàó -->
            <picker-view-column>
              <view wx:for="{{datePickerRange[0]}}" wx:key="*this" class="picker-item">
                {{item}}
              </view>
            </picker-view-column>
            
            <!-- Êúà‰ªΩÂàó -->
            <picker-view-column>
              <view wx:for="{{datePickerRange[1]}}" wx:key="*this" class="picker-item">
                {{item}}
              </view>
            </picker-view-column>
            
            <!-- Êó•ÊúüÂàó -->
            <picker-view-column>
              <view wx:for="{{datePickerRange[2]}}" wx:key="*this" class="picker-item">
                {{item}}
              </view>
            </picker-view-column>
          </picker-view>
        </view>

        <!-- Êó∂Èó¥ÈÄâÊã©Âô® -->
        <view wx:if="{{type === 'time' || type === 'datetime'}}" class="time-picker-section">
          <view class="section-title">Êó∂Èó¥</view>
          <picker-view 
            class="time-picker"
            value="{{timePickerValue}}"
            bindchange="onTimePickerChange">
            
            <!-- Â∞èÊó∂Âàó -->
            <picker-view-column>
              <view wx:for="{{timePickerRange[0]}}" wx:key="*this" class="picker-item">
                {{item}}
              </view>
            </picker-view-column>
            
            <!-- ÂàÜÈíüÂàó -->
            <picker-view-column>
              <view wx:for="{{timePickerRange[1]}}" wx:key="*this" class="picker-item">
                {{item}}
              </view>
            </picker-view-column>
          </picker-view>
        </view>
      </view>

      <!-- Âø´Êç∑ÈÄâÊã© -->
      <view class="quick-select">
        <view class="quick-btn" bindtap="onClear">Ê∏ÖÁ©∫</view>
        <view class="quick-btn" data-type="now" bindtap="selectQuickTime">Áé∞Âú®</view>
        <view class="quick-btn" data-type="tomorrow" bindtap="selectQuickTime">ÊòéÂ§©</view>
        <view class="quick-btn" data-type="next_week" bindtap="selectQuickTime">‰∏ãÂë®</view>
      </view>
    </view>
  </view>
</view>