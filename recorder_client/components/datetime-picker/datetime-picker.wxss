/* 日期时间选择器组件样式 */

.datetime-picker {
  width: 100%;
}

/* 输入框样式 */
.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 12px 16px;
  min-height: 20px;
  transition: border-color 0.2s;
}

.picker-input:not(.disabled):active {
  border-color: #007aff;
}

.picker-input.disabled {
  background: #f5f5f5;
  color: #999;
}

.input-text {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.input-text.placeholder {
  color: #999;
}

.input-icon {
  font-size: 18px;
  color: #666;
  margin-left: 8px;
}

/* 弹窗遮罩 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

/* 选择器容器 */
.picker-container {
  width: 100%;
  background: #fff;
  border-radius: 16px 16px 0 0;
  animation: slideUp 0.3s ease;
  position: relative;
  z-index: 1001;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #eee;
}

.header-btn {
  font-size: 16px;
  padding: 8px 12px;
  border-radius: 6px;
}

.cancel-btn {
  color: #666;
}

.cancel-btn:active {
  background: rgba(0, 0, 0, 0.05);
}

.confirm-btn {
  color: #007aff;
  font-weight: 600;
}

.confirm-btn:active {
  background: rgba(0, 122, 255, 0.1);
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 选择器内容 */
.picker-content {
  padding: 20px;
}

/* 日期选择器部分 */
.date-picker-section,
.time-picker-section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
  text-align: center;
}

.date-picker,
.time-picker {
  height: 200px;
  border: 1px solid #eee;
  border-radius: 8px;
  background: #fff;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  font-size: 16px;
  color: #333;
}

/* 快捷选择 */
.quick-select {
  display: flex;
  justify-content: space-around;
  padding: 16px 0;
  border-top: 1px solid #eee;
}

.quick-btn {
  padding: 8px 16px;
  background: #f8f9fa;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  transition: all 0.2s;
}

.quick-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 禁用状态 */
.datetime-picker.disabled .picker-input {
  background: #f5f5f5;
  border-color: #e0e0e0;
  color: #999;
}

.datetime-picker.disabled .input-icon {
  color: #ccc;
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .picker-input {
    background: #1c1c1e;
    border-color: #38383a;
    color: #fff;
  }
  
  .input-text {
    color: #fff;
  }
  
  .input-text.placeholder {
    color: #8e8e93;
  }
  
  .input-icon {
    color: #8e8e93;
  }
  
  .picker-container {
    background: #1c1c1e;
  }
  
  .picker-header {
    border-bottom-color: #38383a;
  }
  
  .header-title {
    color: #fff;
  }
  
  .cancel-btn {
    color: #8e8e93;
  }
  
  .section-title {
    color: #fff;
  }
  
  .date-picker,
  .time-picker {
    background: #2c2c2e;
    border-color: #38383a;
  }
  
  .picker-item {
    color: #fff;
  }
  
  .quick-select {
    border-top-color: #38383a;
  }
  
  .quick-btn {
    background: #2c2c2e;
    color: #8e8e93;
  }
  
  .quick-btn:active {
    background: #3a3a3c;
  }
  
  .picker-input.disabled {
    background: #2c2c2e;
    border-color: #48484a;
    color: #8e8e93;
  }
}