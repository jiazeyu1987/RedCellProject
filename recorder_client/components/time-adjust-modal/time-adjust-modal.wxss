/* components/time-adjust-modal/time-adjust-modal.wxss */

.time-adjust-container {
  padding: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

/* 步骤指示器样式 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.step-item.active {
  opacity: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e9ecef;
  color: #6c757d;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background: #007bff;
  color: #fff;
}

.step-title {
  font-size: 24rpx;
  color: #6c757d;
  transition: color 0.3s ease;
}

.step-item.active .step-title {
  color: #007bff;
}

.step-line {
  width: 60rpx;
  height: 4rpx;
  background: #e9ecef;
  margin: 0 20rpx;
  transition: background 0.3s ease;
}

.step-line.active {
  background: #007bff;
}

/* 步骤内容样式 */
.step-content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 140rpx;
}

/* 节标题样式 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 当前预约信息样式 */
.current-appointment {
  margin-bottom: 40rpx;
}

.appointment-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border-left: 4rpx solid #007bff;
}

.appointment-time {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.appointment-time .date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.appointment-time .time {
  font-size: 28rpx;
  color: #007bff;
  background: #e7f1ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.appointment-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.appointment-info text,
.batch-info text {
  font-size: 26rpx;
  color: #666;
}

.batch-info {
  text-align: center;
}

.batch-info .count {
  font-size: 28rpx;
  color: #007bff;
  font-weight: bold;
}

/* 时间选择样式 */
.time-selection {
  margin-bottom: 40rpx;
}

.picker-display {
  padding: 16rpx 0;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.picker-display.placeholder {
  color: #999;
}

/* 智能推荐样式 */
.smart-recommend {
  margin-bottom: 40rpx;
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommend-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.recommend-item.selected {
  border-color: #007bff;
  background: #e7f1ff;
}

.recommend-time {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.recommend-time .date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.recommend-time .time {
  font-size: 26rpx;
  color: #007bff;
}

.recommend-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recommend-info .score {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
}

.recommend-info .reason {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: right;
}

/* 调整原因选择样式 */
.reason-selection {
  margin-bottom: 40rpx;
}

.reason-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.reason-option {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.reason-option.selected {
  background: #007bff;
  border-color: #007bff;
  color: #fff;
}

.reason-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  resize: none;
}

/* 冲突解决样式 */
.conflict-warning {
  background: #fff3cd;
  border: 1rpx solid #ffeeba;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.warning-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.warning-icon {
  font-size: 32rpx;
}

.warning-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #856404;
}

.warning-message {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.5;
}

.conflict-list {
  margin-bottom: 24rpx;
}

.conflict-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border-left: 4rpx solid #dc3545;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.conflict-time {
  font-size: 28rpx;
  font-weight: bold;
  color: #dc3545;
  margin-bottom: 8rpx;
}

.conflict-patient,
.conflict-service {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.suggestions {
  margin-bottom: 24rpx;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggestion-item {
  background: #d1ecf1;
  border: 1rpx solid #bee5eb;
  border-radius: 12rpx;
  padding: 16rpx;
}

.suggestion-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #0c5460;
  margin-bottom: 4rpx;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #0c5460;
  line-height: 1.4;
}

/* 确认信息样式 */
.confirm-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.time-comparison {
  margin: 24rpx 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.comparison-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.comparison-row .label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.original-time {
  font-size: 26rpx;
  color: #666;
  text-decoration: line-through;
}

.new-time {
  font-size: 28rpx;
  color: #007bff;
  font-weight: bold;
}

.arrow {
  text-align: center;
  font-size: 24rpx;
  margin: 8rpx 0;
}

.reason-display {
  display: flex;
  margin: 20rpx 0;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.reason-display .label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.reason-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.impact-notice {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding: 16rpx;
  background: #e7f1ff;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.notice-icon {
  font-size: 28rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #0056b3;
  line-height: 1.4;
  flex: 1;
}

/* 底部操作按钮样式 */
.modal-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
  z-index: 1000;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.modal-footer button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f8f9fa;
  color: #6c757d;
}

.cancel-btn:not([disabled]):active {
  background: #e9ecef;
}

.prev-btn {
  background: #e9ecef;
  color: #495057;
}

.prev-btn:not([disabled]):active {
  background: #dee2e6;
}

.next-btn {
  background: #007bff;
  color: #fff;
}

.next-btn:not([disabled]):active {
  background: #0056b3;
}

.confirm-btn {
  background: #28a745;
  color: #fff;
}

.confirm-btn:not([disabled]):active {
  background: #1e7e34;
}

.modal-footer button[disabled] {
  opacity: 0.6;
  background: #e9ecef !important;
  color: #6c757d !important;
}

.modal-footer button[loading] {
  position: relative;
}

.modal-footer button[loading]::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .time-adjust-container {
    padding: 16rpx;
  }
  
  .step-indicator {
    padding: 20rpx 0;
  }
  
  .step-number {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
  
  .step-title {
    font-size: 22rpx;
  }
  
  .section-title .title-text {
    font-size: 28rpx;
  }
  
  .modal-footer {
    padding: 16rpx;
  }
  
  .modal-footer button {
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .time-adjust-container {
    background: #1a1a1a;
  }
  
  .appointment-card,
  .recommend-item,
  .conflict-item,
  .confirm-info {
    background: #2d2d2d;
    color: #fff;
  }
  
  .section-title .title-text {
    color: #fff;
  }
  
  .appointment-time .date {
    color: #fff;
  }
  
  .picker-display {
    color: #fff;
    border-bottom-color: #555;
  }
  
  .reason-option {
    background: #3a3a3a;
    color: #fff;
    border-color: #555;
  }
  
  .reason-input {
    background: #2d2d2d;
    color: #fff;
    border-color: #555;
  }
  
  .modal-footer {
    background: #2d2d2d;
    border-top-color: #555;
  }
}