/* components/adjustment-history/adjustment-history.wxss */

.adjustment-history-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

/* 统计信息头部 */
.statistics-header {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #007bff;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
}

.filter-icon {
  font-size: 24rpx;
}

.filter-text {
  font-size: 26rpx;
  color: #495057;
}

.display-mode-toggle {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
  overflow: hidden;
}

.mode-item {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #495057;
  background: #fff;
  transition: all 0.3s ease;
}

.mode-item.active {
  background: #007bff;
  color: #fff;
}

/* 历史记录列表 */
.history-list {
  flex: 1;
  padding: 0 20rpx;
}

/* 列表模式样式 */
.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.adjustment-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.patient-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #fff;
}

.status-tag.status-approved {
  background: #28a745;
}

.status-tag.status-rejected {
  background: #dc3545;
}

.status-tag.status-pending {
  background: #ffc107;
  color: #333;
}

.status-tag.status-completed {
  background: #6c757d;
}

.adjust-time {
  font-size: 24rpx;
  color: #666;
}

.time-comparison {
  margin-bottom: 12rpx;
}

.time-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.original-time {
  font-size: 26rpx;
  color: #666;
  text-decoration: line-through;
}

.new-time {
  font-size: 26rpx;
  color: #007bff;
  font-weight: bold;
}

.adjustment-reason {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.reason-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.reason-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 时间轴模式样式 */
.timeline-container {
  position: relative;
  padding-left: 40rpx;
}

.timeline-container::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e9ecef;
}

.timeline-item {
  position: relative;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: -30rpx;
  top: 24rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e9ecef;
  border: 3rpx solid #fff;
  box-shadow: 0 0 0 2rpx #e9ecef;
}

.timeline-dot.status-approved {
  background: #28a745;
  box-shadow: 0 0 0 2rpx #28a745;
}

.timeline-dot.status-rejected {
  background: #dc3545;
  box-shadow: 0 0 0 2rpx #dc3545;
}

.timeline-dot.status-pending {
  background: #ffc107;
  box-shadow: 0 0 0 2rpx #ffc107;
}

.timeline-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.timeline-time {
  font-size: 22rpx;
  color: #666;
}

.timeline-details {
  margin-bottom: 8rpx;
}

.timeline-change {
  font-size: 24rpx;
  color: #007bff;
  display: block;
  margin-bottom: 4rpx;
}

.timeline-reason {
  font-size: 24rpx;
  color: #666;
}

.timeline-status {
  text-align: right;
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.timeline-status.status-approved {
  background: #d4edda;
  color: #155724;
}

.timeline-status.status-rejected {
  background: #f8d7da;
  color: #721c24;
}

.timeline-status.status-pending {
  background: #fff3cd;
  color: #856404;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  right: -100%;
  width: 80%;
  height: 100vh;
  background: #fff;
  z-index: 1000;
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -4rpx 0 20rpx rgba(0, 0, 0, 0.1);
}

.filter-panel.visible {
  right: 0;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.panel-close {
  font-size: 32rpx;
  color: #666;
  padding: 8rpx;
}

.filter-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.date-picker {
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #495057;
}

.status-options,
.reason-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.status-option,
.reason-option {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.status-option.selected,
.reason-option.selected {
  background: #007bff;
  border-color: #007bff;
  color: #fff;
}

.panel-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #eee;
}

.reset-btn,
.apply-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.reset-btn {
  background: #f8f9fa;
  color: #6c757d;
}

.apply-btn {
  background: #007bff;
  color: #fff;
}

/* 详情弹窗 */
.detail-content {
  padding: 20rpx;
}

.detail-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #eee;
}

.section-icon {
  font-size: 28rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.time-change-display {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.change-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.change-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.original-time-detail {
  font-size: 26rpx;
  color: #666;
  text-decoration: line-through;
}

.new-time-detail {
  font-size: 28rpx;
  color: #007bff;
  font-weight: bold;
}

.change-arrow {
  text-align: center;
  font-size: 24rpx;
  margin: 8rpx 0;
}

.reason-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.operation-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.operation-item {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007bff;
}

.operation-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.operation-desc {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.operation-user {
  font-size: 22rpx;
  color: #666;
}

.detail-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.close-btn,
.reapply-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.close-btn {
  background: #f8f9fa;
  color: #6c757d;
}

.reapply-btn {
  background: #007bff;
  color: #fff;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .statistics-header {
    margin: 16rpx;
    padding: 24rpx 0;
  }
  
  .stat-number {
    font-size: 36rpx;
  }
  
  .filter-panel {
    width: 90%;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .adjustment-history-container {
    background: #1a1a1a;
  }
  
  .statistics-header,
  .history-item,
  .timeline-content,
  .detail-section {
    background: #2d2d2d;
  }
  
  .patient-name,
  .timeline-title,
  .section-title,
  .info-value,
  .reason-detail {
    color: #fff;
  }
  
  .filter-panel {
    background: #2d2d2d;
  }
}