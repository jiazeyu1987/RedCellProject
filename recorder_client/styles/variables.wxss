/* 记录员小程序 - 设计变量文件 */

/* ==================== 颜色系统 ==================== */

/* 主题变量定义 */

/* 主色调 */
:root {
  --primary-color: #007AFF;
  --primary-light: #5AC8FA;
  --primary-dark: #0051D5;
  
  --success-color: #34C759;
  --warning-color: #FF9500;
  --danger-color: #FF3B30;
  --info-color: #5AC8FA;
  
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-muted: #999999;
  --text-disabled: #cccccc;
  
  --bg-primary: #ffffff;
  --bg-secondary: #f8f8f8;
  --bg-tertiary: #f0f0f0;
  
  --border-color: #e6e6e6;
  --border-light: #f0f0f0;
  
  --shadow-light: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.05);
  --shadow-medium: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.1);
  
  --radius-small: 8rpx;
  --radius-medium: 12rpx;
  --radius-large: 16rpx;
  --radius-round: 50%;
  
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
  
  --font-xs: 24rpx;
  --font-sm: 26rpx;
  --font-md: 28rpx;
  --font-lg: 32rpx;
  --font-xl: 36rpx;
  --font-xxl: 40rpx;

}

:root {
/* ==================== 字体系统 ==================== */

/* 字体大小 */
--font-size-xxl: 40rpx;             /* 特大标题 20px */
--font-size-xl: 36rpx;              /* 大标题 18px */
--font-size-lg: 32rpx;              /* 标题 16px */
--font-size-md: 28rpx;              /* 正文 14px */
--font-size-sm: 24rpx;              /* 辅助文字 12px */
--font-size-xs: 20rpx;              /* 标签文字 10px */

/* 字体重量 */
--font-weight-bold: 600;            /* 加粗 */
--font-weight-medium: 500;          /* 中等 */
--font-weight-normal: 400;          /* 常规 */

/* 行高 */
--line-height-title: 1.3;           /* 标题行高 */
--line-height-text: 1.5;            /* 正文行高 */

/* ==================== 间距系统 ==================== */

/* 基础间距 */
--space-xs: 8rpx;                   /* 最小间距 4px */
--space-sm: 16rpx;                  /* 小间距 8px */
--space-md: 32rpx;                  /* 中等间距 16px */
--space-lg: 48rpx;                  /* 大间距 24px */
--space-xl: 64rpx;                  /* 特大间距 32px */
--space-xxl: 96rpx;                 /* 超大间距 48px */

/* 页面间距 */
--page-padding: 48rpx;              /* 页面边距 24px */
--card-margin: 32rpx;               /* 卡片间距 16px */
--element-margin: 24rpx;            /* 元素间距 12px */

/* ==================== 尺寸系统 ==================== */

/* 圆角 */
--border-radius-xs: 8rpx;           /* 小圆角 4px */
--border-radius-sm: 12rpx;          /* 小圆角 6px */
--border-radius-md: 16rpx;          /* 中圆角 8px */
--border-radius-lg: 24rpx;          /* 大圆角 12px */
--border-radius-xl: 32rpx;          /* 特大圆角 16px */

/* 边框 */
--border-width: 2rpx;               /* 边框宽度 1px */
--border-width-thick: 4rpx;         /* 粗边框 2px */

/* 阴影 */
--shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);        /* 小阴影 */
--shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);      /* 中阴影 */
--shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);      /* 大阴影 */

/* 组件尺寸 */
--button-height-sm: 56rpx;          /* 小按钮高度 28px */
--button-height-md: 72rpx;          /* 中按钮高度 36px */
--button-height-lg: 88rpx;          /* 大按钮高度 44px */

--input-height: 80rpx;              /* 输入框高度 40px */
--navbar-height: 88rpx;             /* 导航栏高度 44px */
--tabbar-height: 100rpx;            /* 底部导航高度 50px */

/* 图标尺寸 */
--icon-size-xs: 24rpx;              /* 小图标 12px */
--icon-size-sm: 32rpx;              /* 小图标 16px */
--icon-size-md: 48rpx;              /* 中图标 24px */
--icon-size-lg: 64rpx;              /* 大图标 32px */
--icon-size-xl: 96rpx;              /* 特大图标 48px */

/* ==================== 动画系统 ==================== */

/* 动画时长 */
--animation-duration-fast: 150ms;    /* 快速动画 */
--animation-duration-base: 300ms;    /* 基础动画 */
--animation-duration-slow: 500ms;    /* 慢速动画 */

/* 动画曲线 */
--animation-timing-ease: ease;
--animation-timing-ease-in: ease-in;
--animation-timing-ease-out: ease-out;
--animation-timing-ease-in-out: ease-in-out;

/* ==================== Z-index 层级 ==================== */

--z-index-dropdown: 1000;           /* 下拉菜单 */
--z-index-sticky: 1010;             /* 固定定位 */
--z-index-fixed: 1020;              /* 固定元素 */
--z-index-modal-backdrop: 1030;     /* 模态框背景 */
--z-index-modal: 1040;              /* 模态框 */
--z-index-popover: 1050;            /* 弹出框 */
--z-index-tooltip: 1060;            /* 工具提示 */
--z-index-toast: 1070;              /* Toast提示 */

/* ==================== 状态颜色映射 ==================== */

/* 服务状态 */
--status-pending: var(--primary-color);     /* 待服务 - 蓝色 */
--status-progress: var(--warning-color);    /* 进行中 - 橙色 */
--status-complete: var(--success-color);    /* 已完成 - 绿色 */
--status-cancel: var(--info-color);         /* 已取消 - 灰色 */
--status-error: var(--danger-color);        /* 异常 - 红色 */
}