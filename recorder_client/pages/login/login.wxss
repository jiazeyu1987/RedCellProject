/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* 顶部logo区域 */
.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx;
  padding-bottom: 80rpx;
}

.logo-image {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 30rpx;
}

.logo {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.app-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.4;
}

/* 表单区域 */
.form-section {
  flex: 2;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 登录方式切换选项卡 */
.login-tabs {
  display: flex;
  margin-bottom: 40rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #ffffff;
  color: #667eea;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-group.error .input-wrapper {
  border-color: #ff4757;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 0 20rpx;
  height: 88rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.icon {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  background: transparent;
}

.input-field::placeholder {
  color: #999999;
}

.input-action {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.input-action:active {
  opacity: 1;
}

/* 短信验证码按钮 */
.sms-btn {
  min-width: 140rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s ease;
}

.sms-btn.active {
  background: #667eea;
  color: #ffffff;
}

.sms-btn.disabled {
  background: #f0f0f0;
  color: #cccccc;
}

.error-text {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.remember-section {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.check-icon {
  width: 20rpx;
  height: 20rpx;
}

.remember-text {
  font-size: 26rpx;
  color: #666666;
}

.forgot-text {
  font-size: 26rpx;
  color: #667eea;
}

/* 登录按钮 */
.login-buttons {
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-btn.disabled {
  background: #f0f0f0;
  color: #cccccc;
}

.loading {
  display: flex;
  align-items: center;
}

.loading-icon {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  margin-right: 15rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e0e0e0;
}

.divider-text {
  margin: 0 30rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.wechat-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

/* 隐藏的授权按钮 */
.hidden-auth-btn {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  z-index: 9999;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

/* 底部区域 */
.footer-section {
  padding: 40rpx 0 60rpx;
  background: #ffffff;
}

.register-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.register-text {
  font-size: 26rpx;
  color: #666666;
}

.register-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
}

.agreement-section {
  text-align: center;
  line-height: 1.6;
}

.agreement-text {
  font-size: 22rpx;
  color: #999999;
}

.agreement-link {
  font-size: 22rpx;
  color: #667eea;
}

/* 适配不同屏幕 */
@media screen and (max-height: 667px) {
  .logo-section {
    padding-top: 80rpx;
    padding-bottom: 60rpx;
  }
  
  .form-section {
    padding: 40rpx 40rpx 30rpx;
  }
}

/* 安全区域适配 */
.login-container {
  padding-bottom: env(safe-area-inset-bottom);
}