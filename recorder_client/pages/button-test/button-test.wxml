<view class="button-test-page">
  <view class="test-section">
    <view class="section-title">按钮样式测试</view>
    
    <view class="button-group">
      <text class="group-title">基础按钮（原生button）</text>
      <button type="primary" class="test-button native-button">主要按钮</button>
      <button type="default" class="test-button native-button">默认按钮</button>
      <button class="test-button native-button">普通按钮</button>
      <button plain class="test-button native-button">透明按钮</button>
      <button size="mini" class="test-button native-button">迷你按钮</button>
    </view>

    <view class="button-group">
      <text class="group-title">自定义按钮组件</text>
      <button text="主要按钮" type="primary" class="test-button"></button>
      <button text="次要按钮" type="secondary" class="test-button"></button>
      <button text="成功按钮" type="success" class="test-button"></button>
      <button text="警告按钮" type="warning" class="test-button"></button>
      <button text="危险按钮" type="danger" class="test-button"></button>
      <button text="信息按钮" type="info" class="test-button"></button>
      <button text="文字按钮" type="text" class="test-button"></button>
      <button text="链接按钮" type="link" class="test-button"></button>
    </view>

    <view class="button-group">
      <text class="group-title">不同尺寸</text>
      <button text="大按钮" type="primary" size="large" class="test-button"></button>
      <button text="中等按钮" type="primary" size="medium" class="test-button"></button>
      <button text="小按钮" type="primary" size="small" class="test-button"></button>
      <button text="迷你按钮" type="primary" size="mini" class="test-button"></button>
    </view>

    <view class="button-group">
      <text class="group-title">特殊样式</text>
      <button text="幽灵按钮" type="primary" ghost="{{true}}" class="test-button"></button>
      <button text="渐变按钮" type="primary" gradient="{{true}}" class="test-button"></button>
      <button text="阴影按钮" type="primary" shadow="{{true}}" class="test-button"></button>
      <button text="圆形按钮" type="primary" shape="round" class="test-button"></button>
      <button text="块级按钮" type="primary" block="{{true}}" class="test-button"></button>
    </view>

    <view class="button-group">
      <text class="group-title">状态测试</text>
      <button text="正常状态" type="primary" class="test-button"></button>
      <button text="禁用状态" type="primary" disabled="{{true}}" class="test-button"></button>
      <button text="加载中" type="primary" loading="{{true}}" loading-text="加载中..." class="test-button"></button>
    </view>
  </view>
</view>