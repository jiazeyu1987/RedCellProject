/* 成员表单页面样式 */
.member-form-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 200rpx;
}

/* 步骤指示器 */
.step-indicator {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 60rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  position: relative;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #e5e5e7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
  font-size: 24rpx;
  font-weight: 600;
  color: #86868b;
}

.step-item.active .step-circle {
  background: #007aff;
  color: #fff;
}

.step-item.current .step-circle {
  background: #007aff;
  color: #fff;
  box-shadow: 0 0 0 8rpx rgba(0, 122, 255, 0.2);
}

.step-title {
  font-size: 24rpx;
  color: #86868b;
  transition: color 0.3s ease;
}

.step-item.active .step-title {
  color: #007aff;
  font-weight: 500;
}

.step-line {
  position: absolute;
  top: 70rpx;
  left: 60rpx;
  right: 60rpx;
  height: 4rpx;
  background: #e5e5e7;
  z-index: 1;
}

.step-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: #007aff;
  transition: width 0.3s ease;
}

/* 表单容器 */
.form-container {
  padding: 0 30rpx;
}

.step-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.step-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.step-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #86868b;
  display: block;
}



/* 表单区块 */
.form-section {
  margin-bottom: 40rpx;
}

/* 动态输入区块 */
.dynamic-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.section-title .iconfont {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #007aff;
}

.input-with-button {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 24rpx;
}

.dynamic-input {
  flex: 1;
  height: 96rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e6ed;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  color: #1a1a1a;
}

.dynamic-input:focus {
  border-color: #007aff;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.15);
  outline: none;
}

.add-btn {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056d6 100%) !important;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  color: #ffffff !important;
  flex-direction: column;
  padding: 10rpx 8rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

.add-btn .iconfont {
  font-size: 28rpx;
  color: #ffffff !important;
  margin-bottom: 6rpx;
  line-height: 1;
}

.add-btn .btn-text {
  font-size: 26rpx;
  color: #ffffff !important;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  font-weight: 600;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(0, 122, 255, 0.1);
  border: 2rpx solid #007aff;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #007aff;
}

.tag-item.allergy {
  background: rgba(255, 59, 48, 0.1);
  border-color: #ff3b30;
  color: #ff3b30;
}

.tag-text {
  margin-right: 10rpx;
}

.tag-remove {
  font-size: 20rpx;
  cursor: pointer;
}

/* 预览区块 */
.preview-section {
  margin-top: 40rpx;
}

.preview-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-item .label {
  font-size: 26rpx;
  color: #86868b;
  margin-right: 15rpx;
  min-width: 140rpx;
}

.preview-item .value {
  font-size: 26rpx;
  color: #1d1d1f;
  flex: 1;
}

/* 底部操作区 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #e5e5e7;
  padding: 20rpx 30rpx 40rpx;
  z-index: 100;
}

.step-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.step-nav .nav-btn {
  flex: 0 0 auto;
}

.nav-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #e5e5e7;
  background: #ffffff;
  color: #666;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.nav-btn:active {
  transform: translateY(2rpx) scale(0.98);
  opacity: 0.8;
}

.nav-btn.next-btn {
  background: #007aff !important;
  border: none;
  color: #ffffff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
  font-weight: 600;
  min-width: 180rpx;
}

/* 重写全局图标颜色设置，确保按钮图标颜色正确 */
.bottom-actions .nav-btn.next-btn,
.bottom-actions .nav-btn.next-btn .iconfont,
.bottom-actions .nav-btn.next-btn text {
  color: #ffffff !important;
}

.bottom-actions .nav-btn.prev-btn,
.bottom-actions .nav-btn.prev-btn .iconfont,
.bottom-actions .nav-btn.prev-btn text {
  color: #495057 !important;
}

.bottom-actions .action-btn.submit-btn,
.bottom-actions .action-btn.submit-btn .iconfont,
.bottom-actions .action-btn.submit-btn text {
  color: #ffffff !important;
}

.bottom-actions .action-btn.cancel-btn,
.bottom-actions .action-btn.cancel-btn .iconfont,
.bottom-actions .action-btn.cancel-btn text {
  color: #666666 !important;
}

.bottom-actions .action-btn.reset-btn,
.bottom-actions .action-btn.reset-btn .iconfont,
.bottom-actions .action-btn.reset-btn text {
  color: #ffffff !important;
}

.nav-btn.next-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 122, 255, 0.4);
}

.nav-btn.prev-btn {
  background: #f8f9fa !important;
  border: 1rpx solid #e5e5e7;
  font-weight: 500;
}

.nav-btn.prev-btn:active {
  background: #e9ecef !important;
}

.nav-btn .iconfont {
  font-size: 28rpx;
  transition: transform 0.3s ease;
}

.nav-btn:active .iconfont {
  transform: scale(1.1);
}

.prev-btn .iconfont {
  margin-right: 10rpx;
}

.next-btn .iconfont {
  margin-left: 10rpx;
  animation: arrow-bounce 2s ease-in-out infinite;
}

/* 下一步按钮箭头动画 */
@keyframes arrow-bounce {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(4rpx);
  }
}

.main-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn:active {
  transform: translateY(2rpx);
  opacity: 0.8;
}

/* 移除按钮的伪元素背景效果 */

.cancel-btn {
  background: #f8f9fa !important;
  border: 1rpx solid #e5e5e7;
}

.cancel-btn:hover {
  background: #e9ecef !important;
}

.reset-btn {
  background: #ff9500 !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
}

.reset-btn:hover {
  background: #e6820e !important;
}

.submit-btn {
  background: #007aff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.submit-btn:hover {
  background: #0056d6 !important;
}

.action-btn:disabled {
  opacity: 0.6;
  transform: none;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 现代化按钮基础样式 */
.modern-btn {
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 移除微信小程序button组件的默认伪元素样式 */
.modern-btn::after {
  border: none !important;
  background: none !important;
}

.nav-btn::after,
.action-btn::after {
  border: none !important;
  background: none !important;
}

.modern-btn .iconfont {
  margin-right: 8rpx;
  font-size: 28rpx;
  transition: transform 0.3s ease;
}

.modern-btn:active .iconfont {
  transform: scale(0.9);
}

.modern-btn text {
  position: relative;
  z-index: 1;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .step-indicator {
    padding: 30rpx 40rpx;
  }
  
  .step-circle {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
  }
  
  .step-title {
    font-size: 22rpx;
  }
  
  .form-container {
    padding: 0 20rpx;
  }
  
  .step-content {
    padding: 30rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .member-form-page {
    background-color: #1c1c1e;
  }
  
  .step-indicator,
  .step-content,
  .bottom-actions {
    background-color: #2c2c2e;
  }
  
  .step-subtitle,
  .section-title,
  .preview-item .value {
    color: #ffffff;
  }
  
  .dynamic-input {
    background-color: #1c1c1e;
    border-color: #38383a;
    color: #ffffff;
  }
  
  .preview-card {
    background-color: #1c1c1e;
  }
  
  .bottom-actions {
    border-top-color: #38383a;
  }
  
  /* 暗黑模式下的按钮样式 */
  .nav-btn.prev-btn {
    background: #2c2c2e;
    border-color: #48484a;
    color: #ffffff;
  }
  
  .nav-btn.next-btn {
    background: #007aff;
    box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
  }
}

/* 终极样式覆盖 - 确保按钮颜色正确 */
.member-form-page .bottom-actions button.nav-btn.next-btn,
.member-form-page .bottom-actions button.nav-btn.next-btn > text,
.member-form-page .bottom-actions button.nav-btn.next-btn > .iconfont,
.member-form-page .bottom-actions button.action-btn.submit-btn,
.member-form-page .bottom-actions button.action-btn.submit-btn > text,
.member-form-page .bottom-actions button.action-btn.submit-btn > .iconfont {
  color: #ffffff !important;
  background-color: #007aff !important;
}

.member-form-page .bottom-actions button.nav-btn.prev-btn,
.member-form-page .bottom-actions button.nav-btn.prev-btn > text,
.member-form-page .bottom-actions button.nav-btn.prev-btn > .iconfont,
.member-form-page .bottom-actions button.action-btn.cancel-btn,
.member-form-page .bottom-actions button.action-btn.cancel-btn > text,
.member-form-page .bottom-actions button.action-btn.cancel-btn > .iconfont {
  color: #666666 !important;
  background-color: #f8f9fa !important;
}

.member-form-page .bottom-actions button.action-btn.reset-btn,
.member-form-page .bottom-actions button.action-btn.reset-btn > text,
.member-form-page .bottom-actions button.action-btn.reset-btn > .iconfont {
  color: #ffffff !important;
  background-color: #ff9500 !important;
}

