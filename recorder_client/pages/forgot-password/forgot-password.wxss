/* pages/forgot-password/forgot-password.wxss */
.forgot-password-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  color: white;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 60rpx;
  margin-bottom: 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255, 255, 255, 0.6);
  transition: color 0.3s ease;
}

.step-item.active {
  color: white;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.step-number.active {
  background: white;
  border-color: white;
  color: #667eea;
}

.step-label {
  font-size: 24rpx;
  text-align: center;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 30rpx;
  margin-bottom: 40rpx;
  transition: background 0.3s ease;
}

.step-line.active {
  background: white;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  min-height: calc(100vh - 300rpx);
  padding: 60rpx 40rpx 40rpx;
  margin-top: 20rpx;
}

/* 步骤内容 */
.step-content {
  width: 100%;
}

.step-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

/* 清除按钮 */
.clear-btn {
  padding: 10rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 短信验证码按钮 */
.sms-btn-wrapper {
  display: flex;
  align-items: center;
}

.sms-btn {
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  color: #999;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.sms-btn.active {
  background: #2E7CF6;
  color: white;
  border-color: #2E7CF6;
}

/* 密码切换按钮 */
.password-toggle {
  padding: 10rpx;
}

.eye-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 密码规则 */
.password-rules {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 40rpx 0;
}

.rules-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rule-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
}

.button-group .custom-button {
  flex: 1;
}

/* 单个按钮时居中 */
.button-group .custom-button:only-child {
  flex: none;
  width: 100%;
}

/* 底部提示 */
.footer {
  padding: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .step-indicator {
    padding: 30rpx 40rpx;
  }
  
  .step-number {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
  
  .step-label {
    font-size: 22rpx;
  }
  
  .step-line {
    margin: 0 20rpx;
  }
  
  .form-container {
    padding: 40rpx 30rpx;
  }
  
  .step-title {
    font-size: 42rpx;
  }
  
  .step-desc {
    font-size: 26rpx;
  }
}

/* 动画效果 */
.step-content {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 200rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}