/* pages/index/index.wxss */
.index-container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 顶部用户信息 */
.user-header {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.avatar-container {
  margin-right: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #007AFF;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.status-container {
  display: flex;
  align-items: center;
}

.status {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.status.online {
  color: #28a745;
}

.status.offline {
  color: #6c757d;
}

.status.busy {
  color: #ffc107;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-dot.online {
  background-color: #28a745;
}

.status-dot.offline {
  background-color: #6c757d;
}

.status-dot.busy {
  background-color: #ffc107;
}

.notification-icon {
  position: relative;
  padding: 10rpx;
}

.notification-icon .icon {
  font-size: 48rpx;
}

.badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #dc3545;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 30rpx;
  text-align: center;
}

/* 卡片样式 */
.task-card, .week-stats {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.card-header {
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.card-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 今日任务统计 */
.task-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #007AFF;
  display: block;
}

.stat-number.pending {
  color: #ffc107;
}

.stat-number.completed {
  color: #28a745;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 紧急任务 */
.urgent-tasks {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.see-all {
  font-size: 28rpx;
  color: #007AFF;
}

.task-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-item:last-child {
  border-bottom: none;
}

.task-time {
  font-size: 28rpx;
  color: #dc3545;
  font-weight: 600;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.task-content {
  flex: 1;
}

.patient-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
}

.service-name {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
  display: block;
}

.task-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 本周统计 */
.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-card {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #007AFF;
  display: block;
}

/* 通知消息 */
.notices {
  margin-bottom: 30rpx;
}

.notice-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
}

.notice-desc {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  display: block;
  line-height: 1.4;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-button {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  flex: 1;
  margin: 0 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.action-button:first-child {
  margin-left: 0;
}

.action-button:last-child {
  margin-right: 0;
}

.action-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  display: block;
}

/* 刷新提示 */
.refresh-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0,0,0,0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  z-index: 1000;
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .index-container {
    background-color: #1a1a1a;
  }
  
  .task-card, .week-stats, .task-list, .notice-list, .action-button {
    background-color: #2d2d2d;
  }
  
  .card-title, .section-title, .nickname, .patient-name, .notice-title, .action-text {
    color: #ffffff;
  }
  
  .card-subtitle, .stat-label, .service-name, .notice-desc {
    color: #cccccc;
  }
  
  .notice-time {
    color: #999999;
  }
}