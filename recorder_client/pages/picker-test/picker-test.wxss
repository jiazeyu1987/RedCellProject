/* 选择器测试页面样式 */
.picker-test-page {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.content {
  padding: 0 20rpx;
}

.test-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 24rpx;
}

.current-value {
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.current-value text {
  font-size: 32rpx;
  color: #666;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  background: #007aff;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
}