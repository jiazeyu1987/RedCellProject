/* 用户设置页面样式 */
.user-settings-container {
  background: #f5f5f5;
  min-height: 100vh;
}

.settings-header {
  background: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.settings-content {
  padding: 20rpx 0;
}

.setting-group {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.group-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 32rpx;
  color: #333;
}

.item-value {
  font-size: 30rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.settings-footer {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  background: #ff3b30;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
}