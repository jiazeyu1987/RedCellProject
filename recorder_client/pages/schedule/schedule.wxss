/* 日程管理页面样式 */

.schedule-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f8f9fa;
}

/* =================== 页面顶部导航区域 =================== */

.page-header {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  color: white;
  padding: 20rpx 32rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.15);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.header-left {
  flex: 1;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 8rpx;
  display: block;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  line-height: 1.2;
  display: block;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 12rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  min-width: 80rpx;
  position: relative;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
  line-height: 1;
}

.action-text {
  font-size: 20rpx;
  line-height: 1;
  opacity: 0.9;
}

.filter-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 12rpx;
  height: 12rpx;
  background: #FF3B30;
  border-radius: 50%;
  border: 2rpx solid white;
}

/* 统计信息栏 */
.stats-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  backdrop-filter: blur(10rpx);
  gap: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 4rpx;
}

.stat-number.overdue {
  color: #FF9500;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
  line-height: 1;
}

/* =================== 快捷筛选标签区域 =================== */

.quick-filters {
  background: white;
  border-bottom: 1rpx solid #E5E5EA;
  padding: 24rpx 0;
}

.filter-scroll {
  width: 100%;
}

.filter-tags {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
  white-space: nowrap;
}

.filter-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background: #F2F2F7;
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  flex-shrink: 0;
  position: relative;
}

.filter-tag.active {
  background: rgba(0, 122, 255, 0.1);
  border-color: #007AFF;
  color: #007AFF;
}

.filter-tag.custom {
  background: linear-gradient(135deg, #34C759, #30B752);
  color: white;
}

.filter-tag:active {
  transform: scale(0.95);
}

.tag-icon {
  font-size: 28rpx;
  line-height: 1;
}

.tag-label {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1;
}

.tag-count {
  font-size: 20rpx;
  font-weight: 600;
  background: #007AFF;
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 1.2;
}

.filter-tag.active .tag-count {
  background: white;
  color: #007AFF;
}

/* =================== 批量操作工具栏 =================== */

.batch-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.batch-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-all-checkbox {
  margin-right: 0;
}

.selected-count {
  font-size: 26rpx;
  color: #8E8E93;
}

.batch-right {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.batch-btn:disabled {
  background: #E5E5EA;
  color: #C7C7CC;
}

.batch-btn:not(:disabled):active {
  background: #0051D5;
  transform: scale(0.95);
}

.btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

/* =================== 主内容区域 =================== */

.page-content {
  flex: 1;
  position: relative;
  background: #f8f9fa;
}

.schedule-list {
  padding: 16rpx 0;
}

.list-container {
  padding: 0 32rpx;
}

/* 刷新提示 */
.refresh-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(0, 122, 255, 0.1);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}

.refresh-icon {
  font-size: 28rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.refresh-text {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 500;
}

/* 日程卡片列表 */
.schedule-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.schedule-item {
  transition: all 0.3s ease;
}

.schedule-item:active {
  transform: scale(0.98);
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
}

.load-more-icon {
  font-size: 28rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.load-more-text {
  font-size: 26rpx;
  color: #8E8E93;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  justify-content: center;
  padding: 32rpx;
}

.no-more-text {
  font-size: 24rpx;
  color: #C7C7CC;
  position: relative;
}

.no-more-text::before,
.no-more-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60rpx;
  height: 1rpx;
  background: #E5E5EA;
}

.no-more-text::before {
  left: -80rpx;
}

.no-more-text::after {
  right: -80rpx;
}

/* =================== 浮动操作按钮 =================== */

.fab-container {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  z-index: 999;
}

.fab-main {
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #007AFF, #0051D5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.fab-main:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 40rpx;
  color: white;
  font-weight: 600;
  line-height: 1;
  transition: all 0.3s ease;
}

.fab-actions {
  position: absolute;
  bottom: 132rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.fab-actions.expanded {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-action {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  transition: all 0.3s ease;
}

.fab-action:active {
  transform: scale(0.95);
}

.fab-action-icon {
  font-size: 32rpx;
  line-height: 1;
}

.fab-action-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #1D1D1F;
  line-height: 1;
}

/* =================== 更多操作菜单 =================== */

.more-menu {
  padding: 32rpx 0;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  background: #F2F2F7;
}

.menu-icon {
  font-size: 36rpx;
  line-height: 1;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 30rpx;
  color: #1D1D1F;
  font-weight: 500;
  line-height: 1.2;
}

/* =================== 响应式设计 =================== */

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .schedule-page {
    background: #000000;
  }
  
  .quick-filters {
    background: #1C1C1E;
    border-bottom-color: #38383A;
  }
  
  .filter-tag {
    background: #2C2C2E;
    color: #FFFFFF;
  }
  
  .filter-tag.active {
    background: rgba(0, 122, 255, 0.2);
  }
  
  .batch-toolbar {
    background: #1C1C1E;
    border-bottom-color: #38383A;
  }
  
  .page-content {
    background: #000000;
  }
  
  .fab-action {
    background: #2C2C2E;
  }
  
  .fab-action-label {
    color: #FFFFFF;
  }
  
  .menu-item:active {
    background: #2C2C2E;
  }
  
  .menu-text {
    color: #FFFFFF;
  }
}

/* 小屏幕适配 */
@media screen and (max-width: 750rpx) {
  .page-header {
    padding: 16rpx 24rpx 24rpx;
  }
  
  .header-right {
    gap: 12rpx;
  }
  
  .action-btn {
    min-width: 70rpx;
    padding: 6rpx 10rpx;
  }
  
  .action-icon {
    font-size: 28rpx;
  }
  
  .action-text {
    font-size: 18rpx;
  }
  
  .stats-bar {
    padding: 16rpx 20rpx;
    gap: 24rpx;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .stat-label {
    font-size: 20rpx;
  }
  
  .filter-tags {
    padding: 0 24rpx;
    gap: 12rpx;
  }
  
  .filter-tag {
    padding: 12rpx 16rpx;
  }
  
  .tag-label {
    font-size: 24rpx;
  }
  
  .list-container {
    padding: 0 24rpx;
  }
  
  .fab-container {
    right: 24rpx;
    bottom: 100rpx;
  }
  
  .fab-main {
    width: 96rpx;
    height: 96rpx;
  }
  
  .fab-icon {
    font-size: 36rpx;
  }
}