/* Hover效果测试页面样式 */
.hover-test-page {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.test-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 60rpx;
}

.demo-group {
  margin-bottom: 60rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.demo-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 30rpx;
}

.demo-button {
  display: block;
  margin-bottom: 20rpx;
  width: 100%;
}

.control-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.toggle-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.instructions {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #f0f8ff;
  border-radius: 12rpx;
  border-left: 8rpx solid #007aff;
}

.instruction-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 20rpx;
}

.instruction-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.instruction-text:last-child {
  margin-bottom: 0;
}