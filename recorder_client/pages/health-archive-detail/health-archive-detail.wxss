/* health-archive-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 成员信息区域 */
.member-info-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.member-header {
  display: flex;
  align-items: center;
}

.member-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.member-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-relation {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.member-age {
  font-size: 26rpx;
  color: #999;
}

/* Tab 选项卡 */
.tabs-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.tabs-wrapper {
  display: flex;
  border-bottom: 1rpx solid #e6e6e6;
}

.tab-item {
  flex: 1;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #007aff;
  border-bottom: 4rpx solid #007aff;
}

.tab-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-title {
  font-size: 24rpx;
}

/* Tab 内容区域 */
.tab-content {
  padding: 0 30rpx;
}

/* 概览内容 */
.overview-content {
  margin-bottom: 30rpx;
}

.health-overview-card,
.risk-assessment-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.health-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 风险评估 */
.risk-level {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: #fff;
}

.risk-low {
  background-color: #34c759;
}

.risk-medium {
  background-color: #ff9500;
}

.risk-high {
  background-color: #ff3b30;
}

.risk-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.risk-score {
  font-size: 28rpx;
  color: #333;
}

.view-detail {
  font-size: 26rpx;
  color: #007aff;
}

/* 生命体征 */
.vital-content {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.vital-signs-list {
  padding: 0;
}

.vital-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.vital-item:last-child {
  border-bottom: none;
}

.vital-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
}

.vital-value {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

.vital-time {
  font-size: 24rpx;
  color: #999;
}

/* 医疗记录和检查报告 */
.medical-content,
.reports-content,
.medications-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.medical-section,
.medication-section {
  margin-bottom: 40rpx;
}

.medical-section:last-child,
.medication-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.record-list,
.reports-list,
.medication-list {
  display: flex;
  flex-direction: column;
}

.record-item,
.report-item,
.medication-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child,
.report-item:last-child,
.medication-item:last-child {
  border-bottom: none;
}

.record-date,
.report-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.record-hospital,
.record-department,
.record-diagnosis,
.report-type,
.report-hospital,
.report-status,
.medication-name,
.medication-dosage,
.medication-frequency,
.medication-period,
.medication-reason {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.medication-name {
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.loading-text,
.error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #007aff;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}