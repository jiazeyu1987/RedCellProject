/* 家庭关系图谱详情页面样式 */

.relationship-map-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
}

/* 顶部工具栏 */
.page-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.toolbar-left,
.toolbar-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 120rpx;
}

.toolbar-left {
  justify-content: flex-start;
}

.toolbar-right {
  justify-content: flex-end;
}

.toolbar-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 20rpx;
  color: white;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.back-text {
  font-size: 26rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.member-count {
  font-size: 24rpx;
  opacity: 0.9;
}

.tool-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.tool-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 主内容区域 */
.page-content {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.map-container {
  width: 100%;
  height: 100%;
  background: white;
}

.map-container .full-map {
  height: 100%;
  border-radius: 0;
  box-shadow: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
  background: white;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.error-subtitle {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.error-action {
  padding: 24rpx 48rpx;
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.error-action:active {
  background: #357ABD;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
  background: white;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.empty-action:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

/* 底部操作栏 */
.bottom-actions {
  padding: 24rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-group {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  max-width: 200rpx;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666666;
}

.action-btn.secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.2);
}

.action-btn icon {
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 操作提示浮层 */
.operation-tips {
  position: fixed;
  bottom: 140rpx;
  left: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  z-index: 1000;
}

.operation-tips.show {
  opacity: 1;
  transform: translateY(0);
}

.tip-content {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  gap: 12rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
}

.tip-action {
  padding: 8rpx 16rpx;
  background: #fa8c16;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.tip-action:active {
  background: #d46b08;
  transform: scale(0.98);
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .page-toolbar {
    padding: 16rpx 20rpx;
  }
  
  .toolbar-left,
  .toolbar-right {
    min-width: 100rpx;
  }
  
  .page-title {
    font-size: 28rpx;
  }
  
  .member-count {
    font-size: 22rpx;
  }
  
  .action-group {
    flex-direction: column;
  }
  
  .action-btn {
    max-width: none;
    flex-direction: row;
    justify-content: center;
    gap: 12rpx;
  }
  
  .action-btn icon {
    margin-bottom: 0;
  }
}

/* 暗色主题适配 */
@media (prefers-color-scheme: dark) {
  .relationship-map-page {
    background-color: #1a1a1a;
  }
  
  .map-container,
  .loading-state,
  .error-state,
  .empty-state,
  .bottom-actions {
    background-color: #2d2d2d;
    color: white;
  }
  
  .bottom-actions {
    border-top-color: #444444;
  }
  
  .error-title,
  .empty-title {
    color: white;
  }
  
  .error-subtitle,
  .empty-subtitle,
  .loading-text {
    color: #cccccc;
  }
  
  .action-btn.secondary {
    background-color: #3a3a3a;
    color: #cccccc;
  }
  
  .action-btn.secondary:active {
    background-color: #4a4a4a;
  }
}